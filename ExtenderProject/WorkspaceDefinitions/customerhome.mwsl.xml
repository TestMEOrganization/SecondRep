<MWSL xmlns="http://www.deltek.com/ns/mwsl" version="0.23">
  <Workspace name="CustomerHome" title="Customer Home">
    <Card source="CustomerCard" name="CustomerCard_Overview" view="CustomerHomeKPI" title="Overview">
      <Expansions>
        <!-- <Mount>
          <Card source="CompanyCustomerCard" view="Full" />
        </Mount> -->
        <Restrict reversedForeignKey="CustomerNumber_Customer">
          <Filter source="Jobs" view="RelatedJobs(false,true)" title="Jobs">
            <Assistants parentSize="large">
              <Bind foreignKey="primary">
                <Card source="JobOverview" view="Overview(false,true)" title="Details" />
              </Bind>
            </Assistants>
          </Filter>
        </Restrict>
        <!-- <Restrict reversedForeignKey="CustomerNumber_Customer">
          <Filter source="CompanyCustomerCard" view="InSpecificCustomerContextNotCompacted" title="Company Customers">
            <Assistants minimized="false" parentSize="large">
              <With>
                <Card view="CompanyCustomerHomeKPI" title="Details" hidden="Parent.CustomerNumber = '' or Parent.SettlingCompany = ''" />
              </With>
            </Assistants>
          </Filter>
        </Restrict> -->
      </Expansions>
    </Card>
    <Card source="CustomerCard" view="Standard" title="Information">
      <Assistants minimized="false" parentSize="huge">
        <Bind foreignKey="primary">
          <Card source="PaymentInformation" view="Standard" title="Payment">
            <Assistants>
              <Bind foreignKey="CustomerPaymentMode_CustomerPaymentMode">
                <Card source="CustomerPaymentModes" view="Readonly" title="Payment Mode" />
              </Bind>
              <Bind foreignKey="InterestReminderPrinciple_InterestReminderPrinciple">
                <Card source="InterestReminderPrinciples" view="Readonly" title="Interest Charge/Reminder Principle" />
              </Bind>
            </Assistants>
          </Card>
          <Table source="CustomerDiscountAgreements" view="Full" title="Discount Agreements" hidden="parent.LastAgreementNumber = 0" />
        </Bind>
        <With>
          <Card view="Dimensions" title="Dimensions" />
          <Card view="ExtraInformation" title="Extra Information" />
        </With>
        <Bind foreignKey="Card_LinkingRuleHeader">
          <Card source="LinkingRules" view="Readonly" title="Linking Rule" hidden="parent.LinkingRuleName = ''">
            <With>
              <Table title="Linked fields" />
            </With>
          </Card>
        </Bind>
      </Assistants>
    </Card>
    <Hidden source="CustomerCard">
      <Expansions>
        <Bind foreignKey="DocumentArchiveNumber_DocumentArchiveHeader">
          <Table source="DocumentArchives" view="AttachDocument_From_Parent" title="Documents">
            <Expansions minimized="true">
              <Bind foreignKey="primary">
                <Table source="DocumentRevisions" view="Full" />
              </Bind>
            </Expansions>
          </Table>
        </Bind>
        <Bind foreignKey="ContactCompanyNumber_ContactCompany">
          <Hidden source="ContactCompanys">
            <Expansions>
              <With>
                <Table view="Demo_Overview" title="Contact Persons">
                  <Expansions minimized="true">
                    <Restrict reversedForeignKey="ContactPersonNumber1_ContactPerson">
                      <Filter source="Opportunities" view="Minimal" title="Role 1 Opportunities">
                        <Assistants parentSize="large">
                          <With>
                            <Card view="Overview" title="Details" />
                          </With>
                        </Assistants>
                      </Filter>
                    </Restrict>
                    <Restrict reversedForeignKey="ContactPersonNumber2_ContactPerson">
                      <Filter source="Opportunities" view="Minimal" title="Role 2 Opportunities">
                        <Assistants parentSize="large">
                          <With>
                            <Card view="Overview" title="Details" />
                          </With>
                        </Assistants>
                      </Filter>
                    </Restrict>
                    <Restrict reversedForeignKey="ContactPersonNumber3_ContactPerson">
                      <Filter source="Opportunities" view="Minimal" title="Role 3 Opportunities">
                        <Assistants parentSize="large">
                          <With>
                            <Card view="Overview" title="Details" />
                          </With>
                        </Assistants>
                      </Filter>
                    </Restrict>
                  </Expansions>
                </Table>
              </With>
            </Expansions>
          </Hidden>
          <Hidden source="ContactCompanys" name="Opportunities">
            <Restrict reversedForeignKey="ContactCompanyNumber_ContactCompany">
              <Filter source="Opportunities" view="Demo_ContactCompanyHome" title="Opportunities">
                <Expansions minimized="true">
                  <With>
                    <Card view="Overview" title="Opportunity">
                      <Expansions minimized="true">
                        <With>
                          <Table view="Overview" title="Contact Persons" />
                        </With>
                      </Expansions>
                    </Card>
                  </With>
                </Expansions>
              </Filter>
            </Restrict>
          </Hidden>
        </Bind>
      </Expansions>
    </Hidden> 
    	<Card source="CustomerCard" view="Request_for_Customer" title="Request for Customer" />
  </Workspace>
</MWSL>

