<MWSL xmlns="http://www.deltek.com/ns/mwsl" version="0.23">
  <Workspace name="SalesOrderHome" title="Sales Orders">
    <Filter source="SalesOrders" name="SalesOrders_Filter" view="C_SalesOrderHome_Commerce" title="Sales Orders">
      <With>
        <Card title="Sales Order" view="Custom">
          <Expansions>
            <With>
              <Table view="Custom">
                <Expansions minimized="true">
                  <Bind foreignKey="primary">
                    <Table source="SerialNumberReporting" view="Standard" title="Serial Numbers" />
                  </Bind>
                </Expansions>
              </Table>
            </With>
          </Expansions>
          <Assistants parentSize="huge">
            <Bind foreignKey="JobNumber_JobHeader">
              <Card source="Jobs" view="Overview_Vertical" hidden="parent.JobNumber = ''" title="Job" />
            </Bind>
            <Bind foreignKey="CustomerNumber_Customer">
              <Card source="CustomerCard" view="Overview_Vertical" title="Customer" />
            </Bind>
          </Assistants>
        </Card>
      </With>
      <Bind foreignKey="primary">
        <Card source="OrderStatus" view="Full" title="Status" />
      </Bind>
