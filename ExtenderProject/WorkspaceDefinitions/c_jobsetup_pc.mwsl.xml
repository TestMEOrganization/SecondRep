<!-- KRN, 21/05/10: JobSetup extends JobHome (38501).-->
<!-- KRN, 08/07/10: Job parameter attributes (38632).-->
<!-- KRN, 08/07/10: Move exchange rate info (38647).-->
<!-- KRN, 13/08/10: Use demo layout (38644).-->
<!-- KRN, 13/09/10: Hide JobParamter card part (38679).-->
<!-- KRN, 13/08/10: Use demo layout (39179).-->
<!-- KRN, 22/12/10: Use original layout for job parameter selection table (38632).-->
<!-- KRN, 22/12/10: Parameter on original layout for readwrite (38632).-->
<!-- PSZ, 11/07/11: PSO Jobs workspace changes (39759).-->
<!-- PSZ, 15/08/11: New function HideJobEmployees (39850).-->
<!-- PSZ, 27/09/11: Rename Demo layout to Standard in JobEmployees (39975).-->
<!-- PSZ, 26/10/11: Improve performance of dynamic workspace (40098).-->
<MWSL xmlns="http://www.deltek.com/ns/mwsl" version="0.23">
  <Workspace name="C_JobSetup_PC" title="Setup">
    <Define>
      <Function name="HideJobEmployees" type="boolean">
        <Value><![CDATA[parent.OpportunityTemplate
				or parent.Closed
				or isEnvVarDefined('solutionconfiguration.ShowJobEmployeesInJobSetup') 
           and not booleanEnvVar('solutionconfiguration.ShowJobEmployeesInJobSetup')]]></Value>
      </Function>
    </Define>
    <Hidden source="JobParameterSelection">
      <With>
        <Table title="Parameter Selections" view="Full" hidden="not isAdministrator()">
          <Expansions>
            <Bind foreignKey="NewParameterName_JobParameter">
              <Table source="JobParameters" title="New Attributes" view="Full(false)" />
            </Bind>
            <Bind foreignKey="EffectiveParameterName_JobParameter">
              <Table source="JobParameters" title="Current Attributes" view="Full(false)" />
            </Bind>
          </Expansions>
        </Table>
      </With>
    </Hidden>
    <Card source="JobEmployees" title="Job Employees" view="Standard" >
      <With>
        <Table title="Employees" view="JobHome" />
      </With>
    </Card>
    <Card source="FixedExchRateInformation" title="Fixed Exchange Rate Information" view="Demo" >
      <With>
        <Table title="Exchange Rates" view="Full" />
      </With>
    </Card>
  </Workspace>
</MWSL>

