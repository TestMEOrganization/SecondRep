<?xml version="1.0" encoding="UTF-8"?>
<!-- SBA, 01/03/11: New workspace for invoicing processes in batch (39471).-->
<!-- JSV, 02/09/11: Rename DraftInvoiceEditing to DraftInvoices (39256).-->
<MWSL xmlns="http://www.deltek.com/ns/mwsl" version="0.23">
  <Workspace name="BatchJobInvoicing" title="Invoicing">
    <Formation>
      <Section title="Invoice Draft Creation">
        <Mount>
          <Card source="ApproveInvoiceSelection" view="Full" title="Selection Criteria">
            <With>
              <Table view="Demo">
                <Assistants>
                  <Bind foreignKey="primary">
                    <Card source="InvoiceSelection" view="Demo">
                      <Expansions>
                        <With>
                          <Table title="Selection, Standard View" view="Demo_Standard_View">
                            <Expansions minimized="true">
                              <Bind foreignKey="primary">
                                <Table source="ItemizeInvoiceSelection" title="Entries" view="Full" />
                              </Bind>
                            </Expansions>
                          </Table>
                          <Table title="Selection, Billing Prices" view="Demo_Billing_Prices">
                            <Expansions minimized="true">
                              <Bind foreignKey="primary">
                                <Table source="ItemizeInvoiceSelection" title="Entries" view="Full" />
                              </Bind>
                            </Expansions>
                          </Table>
                          <Table title="Direct Invoicing View" view="Demo_Direct_Invoicing">
                            <Expansions minimized="true">
                              <Bind foreignKey="primary">
                                <Table source="ItemizeInvoiceSelection" title="Entries" view="Full" />
                              </Bind>
                            </Expansions>
                          </Table>
                        </With>
                      </Expansions>
                    </Card>
                    <Card source="InvoicingPlans" title="Invoicing Plan" view="Demo">
                      <Expansions>
                        <With>
                          <Table title="Specification, Overview" view="Demo_Overview" />
                          <Table title="Detailed View" view="Full" />
                        </With>
                      </Expansions>
                    </Card>
                    <Card source="OnAccountInvoiceSelection" view="Demo">
                      <Expansions>
                        <With>
                          <Table title="Specification" />
                        </With>
                      </Expansions>
                    </Card>
                  </Bind>
                </Assistants>
              </Table>
            </With>
          </Card>
        </Mount>
      </Section>
      <Section title="Invoice Processing">
        <Mount>
          <Card source="InvoiceDraftStatus" view="Full">
            <With>
              <Table view="Standard">
                <Assistants>
                  <Bind foreignKey="primary">
                    <Card source="InvoiceEditing" name="InvoiceEditing_Card" view="Demo">
                      <Expansions>
                        <With>
                          <Table title="Specification" />
                        </With>
                        <Restrict reversedForeignKey="InvoiceEditingHeader">
                          <Filter source="API_DraftInvoiceEntry" view="Demo" title="Foundation" />
                        </Restrict>
                      </Expansions>
                    </Card>
                  </Bind>
                </Assistants>
              </Table>
            </With>
          </Card>
          <Card source="JobInvoicing" view="Full">
            <With>
              <Table>
                <Assistants>
                  <Bind foreignKey="primary">
                    <Card source="InvoiceEditing" name="InvoiceEditing_Card" view="Demo">
                      <Expansions>
                        <With>
                          <Table title="Specification" />
                        </With>
                        <Restrict reversedForeignKey="InvoiceEditingHeader">
                          <Filter source="API_DraftInvoiceEntry" view="Demo" title="Foundation" />
                        </Restrict>
                      </Expansions>
                    </Card>
                  </Bind>
                </Assistants>
              </Table>
            </With>
          </Card>
          <Card source="JobCrediting" view="Full">
            <With>
              <Table>
                <Assistants>
                  <Bind foreignKey="primary">
                    <Card source="InvoiceEditing" name="InvoiceEditing_Card" view="Demo">
                      <Expansions>
                        <With>
                          <Table title="Specification" />
                        </With>
                        <Restrict reversedForeignKey="InvoiceEditingHeader">
                          <Filter source="API_DraftInvoiceEntry" view="Demo" title="Foundation" />
                        </Restrict>
                      </Expansions>
                    </Card>
                  </Bind>
                </Assistants>
              </Table>
            </With>
          </Card>
          <Filter source="BlanketInvoicingOverview" view="Standard" title="Blanket Invoicing Overview">
            <With>
              <Card view="Full">
                <With>
                  <Table>
                    <Assistants>
                      <Restrict reversedForeignKey="JobInvoiceDistribution">
                        <Workspace source="C_DraftInvoices_BlanketInv" />
                      </Restrict>
                    </Assistants>
                  </Table>
                </With>
              </Card>
            </With>
          </Filter>
        </Mount>
      </Section>
      <Section title="Job Invoice Allocation">
        <Mount>
          <Card source="BatchJobInvoiceAllocation" view="Full" title="Selection Criteria">
            <With>
              <Table>
                <Assistants>
                  <Bind foreignKey="primary">
                    <Card source="JobInvoiceAllocation" view="Demo">
                      <Expansions>
                        <With>
                          <Table title="Selection, Standard View" view="Demo_Standard_View">
                            <Expansions minimized="true">
                              <Bind foreignKey="primary">
                                <Table source="ItemizeJobInvoiceAllocation" title="Entries" view="Full" />
                              </Bind>
                            </Expansions>
                          </Table>
                          <Table title="Selection, Billing Prices" view="Demo_Billing_Prices">
                            <Expansions minimized="true">
                              <Bind foreignKey="primary">
                                <Table source="ItemizeJobInvoiceAllocation" title="Entries" view="Full" />
                              </Bind>
                            </Expansions>
                          </Table>
                          <Table title="Selection, Without Registrations" view="Demo_Without_Registrations">
                            <Expansions minimized="true">
                              <Bind foreignKey="primary">
                                <Table source="ItemizeJobInvoiceAllocation" title="Entries" view="Full" />
                              </Bind>
                            </Expansions>
                          </Table>
                        </With>
                        <Bind foreignKey="primary">
                          <Table source="JobInvoicesOnAccount" title="Invoices On Account" view="Demo_Overview">
                            <Expansions minimized="true">
                              <Bind foreignKey="primary">
                                <Table source="ShowReconciliationOfJobInvoiceOnAccount" title="Reconciliation" view="Demo" />
                              </Bind>
                            </Expansions>
                          </Table>
                        </Bind>
                      </Expansions>
                    </Card>
                  </Bind>
                </Assistants>
              </Table>
            </With>
          </Card>
        </Mount>
      </Section>
      <Section title="Itemize Project Invoice Allocation" >
      	<Mount>
      		<Workspace source="SD_ItemizeJobInvoiceAllocation" />
      	</Mount>
      </Section>
      <Section title="Batch Job Invoice Allocation" >
      	<Mount>
      		<Workspace source="SD_BatchJobInvoiceAllocation" />
      	</Mount>
      </Section>
    </Formation>
  </Workspace>
</MWSL>

