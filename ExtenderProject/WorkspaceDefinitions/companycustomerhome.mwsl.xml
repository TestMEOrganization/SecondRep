<MWSL xmlns="http://www.deltek.com/ns/mwsl" version="0.23">
  <Workspace name="CompanyCustomerHome" title="Company Specific Customer Home">
    <Card source="CompanyCustomerCard" view="CompanyCustomerHomeKPI" title="Overview">
      <Expansions>
        <Restrict reversedForeignKey="CompanyCustomer">
          <Filter source="Jobs" view="RelatedJobs(false,false)" title="Jobs">
            <Assistants parentSize="large">
              <Bind foreignKey="primary">
                <Card source="JobOverview" view="Overview(false,false)" title="Details" />
              </Bind>
            </Assistants>
          </Filter>
        </Restrict>
        <Bind foreignKey="CustomerNumber_Customer">
          <Card source="CustomerCard" view="CustomerHomeKPI" title="Customer" />
        </Bind>
      </Expansions>
    </Card>
    <Card source="CompanyCustomerCard" view="Custom" title="Information">
      <Assistants minimized="false" parentSize="huge">
        <Bind foreignKey="primary">
          <Card source="CompanyCustomerPaymentInfo" view="Standard" title="Payment">
            <Assistants>
              <Bind foreignKey="CompanyCustomerCustomerPaymentMode_CustomerPaymentMode">
                <Card source="CustomerPaymentModes" view="Readonly" title="Payment Modes" />
              </Bind>
              <Bind foreignKey="InterestReminderPrinciple_InterestReminderPrinciple">
                <Card source="InterestReminderPrinciples" view="Readonly" />
              </Bind>
            </Assistants>
          </Card>
        </Bind>
        <With>
          <Card view="Dimensions" title="Dimensions" />
          <Card view="ExtraInformation" title="Extra Information" />
        </With>
        <Bind foreignKey="Card_ParentLinkingRuleHeader">
          <Card source="LinkingRules" view="Readonly" title="Parent Linking Rule" hidden="parent.LinkingRuleName = ''">
            <With>
              <Table title="Linked fields" />
            </With>
          </Card>
        </Bind>
        <Bind foreignKey="Card_CompanyLinkingRuleHeader">
          <Card source="LinkingRules" view="Readonly" title="Company Specific Linking Rule">
            <With>
              <Table title="Linked fields" />
            </With>
          </Card>
        </Bind>
      </Assistants>
    </Card>
    <Hidden source="CompanyCustomerCard">
      <Expansions>
        <Bind foreignKey="DocumentArchiveNumber_DocumentArchiveHeader">
          <Table source="DocumentArchives" view="AttachDocument_From_Parent" title="Documents">
            <Expansions minimized="true">
              <Bind foreignKey="primary">
                <Table source="DocumentRevisions" view="Full" />
              </Bind>
            </Expansions>
          </Table>
        </Bind>
        <Bind foreignKey="ContactCompanyNumber_ContactCompany">
          <Hidden source="ContactCompanys">
            <Expansions>
              <With>
                <Table view="Demo_Overview" title="Contact Persons">
                  <Expansions minimized="true">
                    <Restrict reversedForeignKey="ContactPersonNumber1_ContactPerson">
                      <Filter source="Opportunities" view="Minimal" title="Role 1 Opportunities">
                        <Assistants parentSize="large">
                          <With>
                            <Card view="Overview" title="Details" />
                          </With>
                        </Assistants>
                      </Filter>
                    </Restrict>
                    <Restrict reversedForeignKey="ContactPersonNumber2_ContactPerson">
                      <Filter source="Opportunities" view="Minimal" title="Role 2 Opportunities">
                        <Assistants parentSize="large">
                          <With>
                            <Card view="Overview" title="Details" />
                          </With>
                        </Assistants>
                      </Filter>
                    </Restrict>
                    <Restrict reversedForeignKey="ContactPersonNumber3_ContactPerson">
                      <Filter source="Opportunities" view="Minimal" title="Role 3 Opportunities">
                        <Assistants parentSize="large">
                          <With>
                            <Card view="Overview" title="Details" />
                          </With>
                        </Assistants>
                      </Filter>
                    </Restrict>
                  </Expansions>
                </Table>
              </With>
            </Expansions>
          </Hidden>
          <Hidden source="ContactCompanys" name="Opportunities">
            <Restrict reversedForeignKey="ContactCompanyNumber_ContactCompany">
              <Filter source="Opportunities" view="Demo_ContactCompanyHome" title="Opportunities">
                <Expansions minimized="true">
                  <With>
                    <Card view="Overview" title="Opportunity">
                      <Expansions minimized="true">
                        <With>
                          <Table view="Overview" title="Contact Persons" />
                        </With>
                      </Expansions>
                    </Card>
                  </With>
                </Expansions>
              </Filter>
            </Restrict>
          </Hidden>
        </Bind>
      </Expansions>
    </Hidden>
  </Workspace>
</MWSL>

