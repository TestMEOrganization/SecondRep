<!-- SJK, 09/06/11: New order workspace (39731).-->
<!-- SJK, 29/06/11: Demo filter for Lookup panes (39731).-->
<!-- SJK, 22/08/11: Improvements after verification (39731).-->
<MWSL xmlns="http://www.deltek.com/ns/mwsl" version="0.23">
<Workspace name="C_SalesOrders_Commerce" title="Sales Orders">
	<Formation>
		<Section title="Sales Orders">
			<Mount>
				<Workspace source="SalesOrderHome" />
			</Mount>
		</Section>
		<Section title="Credit Orders">
			<Mount>
				<Workspace source="CreditOrderHome" />
			</Mount>
			<Mount>
				<Workspace source="SD_InvoiceToCreditOrder" />
			</Mount>
		</Section>
		<Section title="Lookup">
			<Mount>
				<Filter source="ShowInvoice" name="ShowInvoice_Filter" view="SalesOrders" title="Invoices">
					<With>
						<Card view="Standard" title="Invoice">
							<Expansions>
								<With>
									<Table view="Standard" />
								</With>
							</Expansions>
							<Assistants>
								<Bind foreignKey="primary">
									<Hidden source="InvoiceToCreditOrder" />
								</Bind>
							</Assistants>
						</Card>
					</With>
				</Filter>
				<Filter source="ShowCreditMemo" view="SalesOrders" title="Credit Memos">
					<With>
						<Card view="Standard" title="Credit Memo">
							<With>
								<Table view="Standard" title="Details" />
							</With>
						</Card>
					</With>
				</Filter>
				<Card source="P_InvoiceStatistics" view="Full" />
			</Mount>
		</Section>
	</Formation>
</Workspace>
</MWSL>
