<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="Specification1">
    <FilterPane>
      <Define>
        <Include fragment="GD_Dimensions" />
      </Define>
      <Filter name="Custom_RoleRestricted_Standard">
        <Actions>
          <Exclude>
            <If condition="not hasRole('Finance Admin')">
              <Create />
              <Update />
              <Delete />
            </If>
          </Exclude>
          <If condition="hasWorkspace('GlobalDimensions') and hasRole('Finance Admin')">
            <Action source="with.Create" wizard="CreateSpecification1" title="New Specification 1" />
          </If>
        </Actions>
        <Compact>
          <Description template="^1 (^2)" arguments="Description;Specification1Name" />
        </Compact>
        <Columns>
          <Field source="Specification1Name" />
          <Field source="Description" />
          <Field source="Blocked" />
          <Field source="DimensionCombNumber" />
          <Field source="AccountNumber" />
          <Columns ref="DimensionColumns" />
        </Columns>
      </Filter>
      <Filter name="Standard">
        <Actions>
          <If condition="hasWorkspace('GlobalDimensions')">
            <Action source="with.Create" wizard="CreateSpecification1" title="New Specification 1" />
          </If>
        </Actions>
        <Compact>
          <Description template="^1 (^2)" arguments="Description;Specification1Name" />
        </Compact>
        <Columns>
          <Field source="Specification1Name" />
          <Field source="Description" />
          <Field source="Blocked" />
          <Field source="DimensionCombNumber" />
          <Field source="AccountNumber" />
          <Columns ref="DimensionColumns" />
        </Columns>
      </Filter>
    </FilterPane>
    <Pane>
      <Define>
        <Include fragment="GD_Dimensions" />
      </Define>
      <Wizard name="CreateSpecification1" title="Create Specification 1">
        <Page form="CreateSpecification1" title="Specification 1" description="Please enter the specification 1 name" />
      </Wizard>
      <Form name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('GlobalDimensions')">
              <Create />
            </If>
          </Exclude>
        </Actions>
        <Row>
          <Column>
            <Group title="Specification 1" style="fullWidth">
              <Field source="Specification1Name" title="Name" />
              <Field source="Description" />
              <Boolean source="Blocked" />
            </Group>
            <Group title="Dimension Combination">
              <Field source="DimensionCombNumber" title="Dim. Comb. No." size="large" />
            </Group>
            <Group title="Print Control">
              <Field source="Statistic1" />
              <Field source="Statistic2" />
              <Field source="Statistic3" />
              <Field source="Statistic4" />
            </Group>
            <Group ref="UserUpdateGroup" />
          </Column>
          <If condition="hasRole('Finance Admin')" >
          <Column>
            <Group title="Derived Account">
              <Grid>
                <Header cells="|Value|;|Description|;|Overwrite|" title="" />
                <Row cells="AccountNumber;AccountTextVar;OverwriteAccount#" title="Account" />
              </Grid>
            </Group>
            <Group ref="DerivedDimensionWithDescriptionConditionalGroup" />
          </Column>
          </If>
          <Else>
          <Column>
            <Group title="Derived Account">
              <Grid>
                <Header cells="|Value|;|Description|;|Overwrite|" title="" />
                <Row cells="-AccountNumber;-AccountTextVar;-OverwriteAccount#" title="Account" />
              </Grid>
            </Group>
            <Group ref="DerivedDimensionWithDescriptionConditionalGroupReadOnly" />
          </Column>
          </Else>
        </Row>
        <Row>
          <Group title="Remarks{pl}">
            <Field source="Remark1" appearance="maximized" />
            <Field source="Remark2" appearance="maximized" />
            <Field source="Remark3" appearance="maximized" />
            <Field source="Remark4" appearance="maximized" />
            <Field source="Remark5" appearance="maximized" />
          </Group>
        </Row>
      </Form>
      <Form name="Full">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('GlobalDimensions')">
              <Create />
            </If>
          </Exclude>
        </Actions>
        <Row>
          <Column>
            <Group title="Specification 1" style="fullWidth">
              <Field source="Specification1Name" title="Name" />
              <Field source="Description" />
              <Boolean source="Blocked" />
            </Group>
            <Group title="Dimension Combination">
              <Field source="DimensionCombNumber" title="Dim. Comb. No." size="large" />
            </Group>
            <Group title="Print Control">
              <Field source="Statistic1" />
              <Field source="Statistic2" />
              <Field source="Statistic3" />
              <Field source="Statistic4" />
            </Group>
            <Group ref="UserUpdateGroup" />
          </Column>
          <Column>
            <Group title="Derived Account">
              <Grid>
                <Header cells="|Value|;|Description|;|Overwrite|" title="" />
                <Row cells="AccountNumber;AccountTextVar;OverwriteAccount#" title="Account" />
              </Grid>
            </Group>
            <Group ref="DerivedDimensionWithDescriptionConditionalGroup" />
          </Column>
        </Row>
        <Row>
          <Group title="Remarks{pl}">
            <Field source="Remark1" appearance="maximized" />
            <Field source="Remark2" appearance="maximized" />
            <Field source="Remark3" appearance="maximized" />
            <Field source="Remark4" appearance="maximized" />
            <Field source="Remark5" appearance="maximized" />
          </Group>
        </Row>
      </Form>
      <Form name="CreateSpecification1">
        <Actions all="true" />
        <Row>
          <Group title="" style="fullWidth">
            <Field source="Specification1Name" title="Name" />
            <Field source="Description" />
          </Group>
        </Row>
      </Form>
    </Pane>
  </Layout>
</MDML>

