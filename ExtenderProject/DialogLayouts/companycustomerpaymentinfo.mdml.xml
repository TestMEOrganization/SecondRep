<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="CompanyCustomerPaymentInfo">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1 (^2), Company No. ^3" arguments="Name1;CustomerNumber;SettlingCompany" />
        </Compact>
        <Columns>
          <Field source="CustomerNumber" />
          <Field source="SettlingCompany" />
          <Field source="Name1" />
          <Field source="Name2" />
          <Field source="Name3" />
          <Field source="ZipCode" />
          <Field source="PostalDistrict" />
          <Field source="Name4" />
          <Field source="Name5" />
          <Field source="Attention" />
        </Columns>
      </Filter>
      <Filter name="CompanyNotCompactable">
        <Columns>
          <Field source="SettlingCompany" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Form name="Full">
        <Actions all="true" />
        <Row>
          <Column>
            <Group title="Customer{Debitor}">
              <Field source="CustomerNumber" />
              <Field source="Name1" appearance="maximized" />
              <Field source="Name2" appearance="maximized" />
              <Field source="Name3" appearance="maximized" />
              <ZipCity citySource="PostalDistrict" zipSource="ZipCode" appearance="maximized" />
              <Field source="Name4" appearance="maximized" />
              <Field source="Name5" appearance="maximized" />
              <Field source="Attention" />
              <Field source="Country" />
              <Field source="Telephone" />
              <Field source="Giro" />
              <Field source="Currency" />
            </Group>
            <Group title="Settling Company">
              <Reference foreignKey="SettlingCompany_CompanyInformation" />
              <Field source="BaseCurrencyVar" title="Base Currency" />
            </Group>
            <Group title="Payment Control">
              <Field source="CustomerPaymentMode" />
              <Field source="CollectionAgreementNumber" title="Collection Agreement{1}" />
              <Field source="CollectionGroupNumber" title="Collection Gr. No." />
              <Field source="GlobalLocationNumber" />
              <Field source="PayerIdentification" title="Payer Id." />
              <Field source="ControlAccountCode" />
              <Boolean source="AutomaticReconciliation" title="Automatic Reconciliation" />
              <Boolean source="Blocked" />
              <Field source="PaymentTerms" />
              <Field source="ExpectedDaysToPayment" />
              <Field source="CashDiscountCode" title="Cash Discount" />
              <Field source="CreditCardNumber" />
              <Field source="CreditCardExpiryDate" />
            </Group>
          </Column>
          <Column>
            <Group title="Bill to Customer{Debitor}">
              <Field source="PaymentCustomer" title="Customer No.{Debitor}" />
              <Field source="PaymentName1Var" appearance="maximized" />
              <Field source="PaymentName2Var" appearance="maximized" />
              <Field source="PaymentName3Var" appearance="maximized" />
              <ZipCity citySource="PaymentPostalDistrictVar" zipSource="PaymentZipCodeVar" appearance="maximized" />
              <Field source="PaymentName4Var" appearance="maximized" />
              <Field source="PaymentName5Var" appearance="maximized" />
              <Field source="PaymentAttentionVar" title="Attn." />
              <Field source="PaymentCountryVar" title="Country" />
              <Field source="PaymentTelephoneVar" title="Phone" />
            </Group>
            <Group title="Balance{Saldo}">
              <Field source="CurrencyBalanceVar" title="Balance, Currency" />
              <Field source="BaseBalanceVar" title="Balance, Base" />
              <Field source="OrderVolume" title="Order Volume, Base" />
            </Group>
            <Group title="Credit Limit">
              <Field source="CreditMax" title="Company Level, Base" />
            </Group>
            <Group title="Interest Charge/Reminder Control">
              <Field source="InterestReminderPrinciple" />
              <Field source="ReminderTextGroupName" />
              <Field source="InterestDate" title="Last Interest Date" />
              <Field source="ReminderLevel" title="Current Reminder Level" />
              <Field source="ReminderDate" title="Date of Last Reminder" />
            </Group>
            <Group title="Electronic Collection">
              <Field source="SelectedForCollectionVar" title="Selected for Collection" />
              <Field source="NumberSelectedForCollectionVar" title="No. Entries Selected" />
            </Group>
            <Group title="Print Status">
              <Field source="AccountStatementNumber" title="Last Statement No." />
              <Field source="AccountStatementDate" title="Date of Last Statement" />
              <Field source="LastAccountPrintout" title="Date of Last Account Printout" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="Standard">
        <Actions all="true" />
        <Column style="fullWidth">
          <Group title="Payment Control">
            <Field source="CustomerPaymentMode" />
            <Field source="CollectionAgreementNumber" title="Collection Agreement{1}" />
            <Field source="CollectionGroupNumber" title="Collection Gr. No." />
            <Field source="GlobalLocationNumber" />
            <Field source="PayerIdentification" title="Payer Id." />
            <Field source="ControlAccountCode" />
            <Field source="PaymentTerms" />
            <Field source="ExpectedDaysToPayment" />
            <Field source="CashDiscountCode" title="Cash Discount" />
            <Field source="CreditCardNumber" />
            <Field source="CreditCardExpiryDate" />
            <Boolean source="AutomaticReconciliation" title="Automatic Reconciliation" />
            <Boolean source="Blocked" />
          </Group>
          <Group title="Credit Limit">
            <Field source="CreditMax" title="Company Level, Base" />
          </Group>
          <Group title="Interest Charge/Reminder Control">
            <Field source="InterestReminderPrinciple" />
            <Field source="ReminderTextGroupName" />
            <Field source="InterestDate" title="Last Interest Date" />
            <Field source="ReminderLevel" title="Current Reminder Level" />
            <Field source="ReminderDate" title="Date of Last Reminder" />
          </Group>
          <Group title="Electronic Collection">
            <Field source="SelectedForCollectionVar" title="Selected for Collection" />
            <Field source="NumberSelectedForCollectionVar" title="No. Entries Selected" />
          </Group>
          <Group title="Balance{Saldo}" style="textAlignment">
            <Field source="CurrencyBalanceVar" title="Balance, Currency" />
            <Field source="BaseBalanceVar" title="Balance, Base" />
            <Field source="OrderVolume" title="Order Volume, Base" />
          </Group>
          <Group title="Print Status">
            <Field source="AccountStatementNumber" title="Last Statement No." />
            <Field source="AccountStatementDate" title="Date of Last Statement" />
            <Field source="LastAccountPrintout" title="Date of Last Account Printout" />
          </Group>
        </Column>
      </Form>
      <Form name="Custom_RoleRestricted_OverviewNoCompany" open="hasRole('Finance Admin')">
        <Row style="fullWidth">
          <Column>
            <Group title="Customer{Debitor}">
              <Field source="CustomerNumber" />
              <Field source="Name1" appearance="maximized" />
              <Field source="Name2" appearance="maximized" />
              <Field source="Name3" appearance="maximized" />
              <ZipCity citySource="PostalDistrict" zipSource="ZipCode" appearance="maximized" />
              <Field source="Name4" appearance="maximized" />
              <Field source="Name5" appearance="maximized" />
              <Field source="Attention" />
              <Field source="Telephone" />
              <Field source="Giro" />
              <Field source="Country" />
              <Field source="Currency" />
            </Group>
            <Group>
              <Link workspace="CompanyCustomers" template="More details..." title=" " appearance="maximized" icon="WorkspaceLink">
                <Target pane="CompanyCustomerCard">
                  <Restriction template="Selected Customer" expression="CustomerNumber=target.CustomerNumber and SettlingCompany=target.SettlingCompany" />
                  <Focus>
                    <Match field="CompanyNumber" value="CompanyNumber" />
                    <Match field="SettlingCompany" value="SettlingCompany" />
                  </Focus>
                </Target>
              </Link>
            </Group>
          </Column>
          <Column>
            <Group title="Bill to Customer{Debitor}">
              <Field source="PaymentCustomer" title="Customer No.{Debitor}" />
              <Field source="PaymentName1Var" appearance="maximized" />
              <Field source="PaymentName2Var" appearance="maximized" />
              <Field source="PaymentName3Var" appearance="maximized" />
              <ZipCity citySource="PaymentPostalDistrictVar" zipSource="PaymentZipCodeVar" appearance="maximized" />
              <Field source="PaymentName4Var" appearance="maximized" />
              <Field source="PaymentName5Var" appearance="maximized" />
              <Field source="PaymentAttentionVar" title="Attn." />
              <Field source="PaymentTelephoneVar" title="Phone" />
              <Field source="PaymentCountryVar" title="Country" />
            </Group>
            <Group title="Balance{Saldo}">
              <Field source="CurrencyBalanceVar" title="Balance, Currency" />
              <Field source="BaseBalanceVar" title="Balance, Base" />
              <Field source="OrderVolume" title="Order Volume, Base" />
            </Group>
            <Group title="Credit Limit">
              <Field source="CreditMax" title="Company Level, Base" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="OverviewNoCompany">
        <Row style="fullWidth">
          <Column>
            <Group title="Customer{Debitor}">
              <Field source="CustomerNumber" />
              <Field source="Name1" appearance="maximized" />
              <Field source="Name2" appearance="maximized" />
              <Field source="Name3" appearance="maximized" />
              <ZipCity citySource="PostalDistrict" zipSource="ZipCode" appearance="maximized" />
              <Field source="Name4" appearance="maximized" />
              <Field source="Name5" appearance="maximized" />
              <Field source="Attention" />
              <Field source="Telephone" />
              <Field source="Giro" />
              <Field source="Country" />
              <Field source="Currency" />
            </Group>
            <Group>
              <Link workspace="CompanyCustomers" template="More details..." title=" " appearance="maximized" icon="WorkspaceLink">
                <Target pane="CompanyCustomerCard">
                  <Restriction template="Selected Customer" expression="CustomerNumber=target.CustomerNumber and SettlingCompany=target.SettlingCompany" />
                  <Focus>
                    <Match field="CompanyNumber" value="CompanyNumber" />
                    <Match field="SettlingCompany" value="SettlingCompany" />
                  </Focus>
                </Target>
              </Link>
            </Group>
          </Column>
          <Column>
            <Group title="Bill to Customer{Debitor}">
              <Field source="PaymentCustomer" title="Customer No.{Debitor}" />
              <Field source="PaymentName1Var" appearance="maximized" />
              <Field source="PaymentName2Var" appearance="maximized" />
              <Field source="PaymentName3Var" appearance="maximized" />
              <ZipCity citySource="PaymentPostalDistrictVar" zipSource="PaymentZipCodeVar" appearance="maximized" />
              <Field source="PaymentName4Var" appearance="maximized" />
              <Field source="PaymentName5Var" appearance="maximized" />
              <Field source="PaymentAttentionVar" title="Attn." />
              <Field source="PaymentTelephoneVar" title="Phone" />
              <Field source="PaymentCountryVar" title="Country" />
            </Group>
            <Group title="Balance{Saldo}">
              <Field source="CurrencyBalanceVar" title="Balance, Currency" />
              <Field source="BaseBalanceVar" title="Balance, Base" />
              <Field source="OrderVolume" title="Order Volume, Base" />
            </Group>
            <Group title="Credit Limit">
              <Field source="CreditMax" title="Company Level, Base" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="Interest">
        <Actions>
          <Update />
        </Actions>
        <Column>
          <Group title="Interest Charge Control">
            <Field source="InterestReminderPrinciple" />
            <Field source="InterestDate" title="Last Interest Date" />
          </Group>
        </Column>
      </Form>
      <Form name="Reminder" style="textAlignment">
        <Actions>
          <Update />
        </Actions>
        <Column>
          <Group title="Interest Charge Control">
            <Field source="InterestReminderPrinciple" />
            <Field source="ReminderTextGroupName" />
            <Field source="ReminderLevel" />
            <Field source="ReminderDate" />
          </Group>
        </Column>
      </Form>
    </UpperPane>
  </Layout>
</MDML>

