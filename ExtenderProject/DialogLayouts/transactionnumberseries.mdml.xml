<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="TransactionNumberSeries">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1 (^2)" arguments="Name1;CompanyNumber" />
        </Compact>
        <Columns>
          <Field source="CompanyNumber" />
          <Field source="Name1" />
          <Field source="Name2" />
          <Field source="Name3" />
          <Field source="ZipCode" />
          <Field source="PostalDistrict" />
          <Field source="Name4" />
          <Field source="Name5" />
          <Field source="Country" />
          <Field source="Telephone" />
        </Columns>
      </Filter>
      <Filter name="Transaction">
        <Columns>
          <Field source="CompanyNumber" />
          <Field source="Name1" />
          <Field source="TransactionNumberPrefix" title="Prefix" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Form name="Full">
        <Actions all="true" />
        <Column>
          <Group title="Company">
            <Field source="CompanyNumber" />
            <Field source="Name1" title="Name" />
          </Group>
          <Group title="Prefix Specification">
            <Field source="TransactionNumberPrefix" title="Trans. No.{TransactionNumberSeries}" />
          </Group>
        </Column>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')" >
        <Actions all="true" />
        <Columns>
          <Field source="NumberSeries" size="large" />
          <Field source="NextNumber" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="NumberSeries" size="large" />
          <Field source="NextNumber" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

