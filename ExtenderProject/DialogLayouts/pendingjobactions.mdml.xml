<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="PendingJobActions">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1 (^2), ^3" arguments="JobName;JobNumber;Name1" />
        </Compact>
        <Columns>
          <Field source="JobNumber" />
          <Field source="JobName" />
          <Field source="JobGroup" />
          <Field source="NotInvoiceable" />
          <Field source="InternalJob" />
          <Field source="Status" />
          <Field source="ConvertedBy" />
          <Field source="ConversionDate" />
          <Field source="ProjectManagerNumber" />
          <Field source="SalesPersonNumber" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Form name="Full">
        <Actions all="true" />
        <Row>
          <Column>
            <Group title="Job">
              <Reference foreignKey="JobNumber_JobHeader" />
              <Field source="Status" />
              <Field source="ExpectedEndingDate" />
              <Field source="ProjectManagerNumber" />
              <Reference foreignKey="CustomerNumber_Customer" descriptionSource="Name1" />
              <Field source="MainJobNumber" />
              <Field source="NumberOfSubJobs" />
              <Field source="Currency" />
              <Field source="NumberOfPendingJobActionsVar" title="Number of Pending Actions" />
              <Field source="PendingJobActionsUpdatedDate" title="Updated Date" />
            </Group>
            <Group title="Selection Criteria">
              <Range firstSource="FromDateVar" lastSource="ToDateVar" title="Date" />
              <BooleanGroup title="Category">
                <Boolean source="SelectAllVar" title="Select All" />
                <Boolean source="TimeAndExpenseVar" title="Time and Expense" />
                <Boolean source="PurchaseVar" title="Purchase" />
                <Boolean source="PostingVar" title="Posting" />
                <Boolean source="InvoicingVar" title="Invoicing" />
                <Boolean source="SalesOrdersVar" title="Sales Orders" />
                <Boolean source="MiscellaneousVar" title="Miscellaneous" />
              </BooleanGroup>
              <Boolean source="OnlyShowCriticalVar" title="Only Lines Preventing Job Closing" />
            </Group>
          </Column>
          <Column>
            <Group title="Job Progress">
              <Field source="LastJobProgressDateVar" title="Last Progress Date" />
              <Field source="CompletionPercentageHoursVar" title="Completion %, Hours" />
              <Field source="CompletionPercentageCostVar" title="Completion %, Cost" />
            </Group>
            <Group title="Last Job Revenue Recognition">
              <Field source="LastJobRevenueRecognitionDateVar" title="Date" />
              <Field source="LastJobRevenueRecognitionCompletionVar" title="Completion %" />
              <Field source="LastJobRevenueRecognitionAmountVar" title="Revenue Recognition Amount" />
            </Group>
            <Group title="Invoicing">
              <Field source="FirstOpenFinanceEntryDateVar" title="Oldest Open Entry" />
              <Field source="LastInvoiceDate" title="Last Invoice Date" />
              <Field source="OpenBillingPriceVar" title="Open Billing Price" />
              <Field source="NetOnAccountVar" title="Net on Account" />
              <Field source="VATOnAccountVar" title="Tax Net on Account" />
              <Pair firstSource="ApprovedForInvoiceEditing" secondSource="NumberOfDraftsForEditingVar" title="Drafts for Editing" />
              <Pair firstSource="ApprovedForInvoicing" secondSource="NumberOfApprovedDraftsVar" title="Approved for Invoicing" />
            </Group>
            <Group title="Price">
              <Field source="FixedPriceVar" title="Fixed Price" />
              <Field source="BudgetBillingPriceCurrency" title="Budgeted Billing Price" />
              <Field source="QuotationPriceCurrency" title="Quote Price" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="Custom">
        <Actions all="not HasPMReadOnly()" />
        <Row>
          <Column>
            <Group title="Status">
              <Field source="NumberOfPendingJobActionsVar" title="Number of Pending Actions" />
              <Field source="PendingJobActionsUpdatedDate" title="Updated Date" />
            </Group>
            <Group title="Selection Criteria">
              <Boolean source="OnlyShowCriticalVar" title="Only Lines Preventing Job Closing" />
              <Range firstSource="FromDateVar" lastSource="ToDateVar" title="Date" size="small" />
              <BooleanGroup title="Category">
                <Boolean source="SelectAllVar" title="Select All" />
                <Boolean source="TimeAndExpenseVar" title="Time and Expense" />
                <Boolean source="PurchaseVar" title="Purchase" />
                <Boolean source="PostingVar" title="Posting" />
                <Boolean source="InvoicingVar" title="Invoicing" />
                <Boolean source="SalesOrdersVar" title="Sales Orders" />
                <Boolean source="MiscellaneousVar" title="Miscellaneous" />
              </BooleanGroup>
            </Group>
          </Column>
          <Column>
            <Group title="Job">
              <Field source="ExpectedEndingDate" />
              <Field source="MainJobNumber" />
              <Field source="NumberOfSubJobs" />
            </Group>
            <Group title="Job Progress">
              <Field source="LastJobProgressDateVar" title="Last Progress Date" />
              <Field source="CompletionPercentageHoursVar" title="Completion %, Hours" />
              <Field source="CompletionPercentageCostVar" title="Completion %, Cost" />
            </Group>
            <Group title="Last Job Revenue Recognition">
              <Field source="LastJobRevenueRecognitionDateVar" title="Date" />
              <Field source="LastJobRevenueRecognitionCompletionVar" title="Completion %" />
              <Field source="LastJobRevenueRecognitionAmountVar" title="Revenue Recognition Amount" />
            </Group>
          </Column>
          <Column>
            <Group title="Invoicing">
              <Field source="FirstOpenFinanceEntryDateVar" title="Oldest Open Entry" />
              <Field source="LastInvoiceDate" title="Last Invoice Date" />
              <Field source="OpenBillingPriceVar" title="Open Billing Price" />
              <Field source="NetOnAccountVar" title="Net on Account" />
              <Field source="VATOnAccountVar" title="Tax Net on Account" />
              <Pair firstSource="ApprovedForInvoiceEditing" secondSource="NumberOfDraftsForEditingVar" title="Drafts for Editing" />
              <Pair firstSource="ApprovedForInvoicing" secondSource="NumberOfApprovedDraftsVar" title="Approved for Invoicing" />
            </Group>
            <Group title="Price">
              <Field source="FixedPriceVar" title="Fixed Price" />
              <Field source="BudgetBillingPriceCurrency" title="Budgeted Billing Price" />
              <Field source="QuotationPriceCurrency" title="Quote Price" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="Standard">
        <Actions all="true" />
        <Row>
          <Column>
            <Group title="Status">
              <Field source="NumberOfPendingJobActionsVar" title="Number of Pending Actions" />
              <Field source="PendingJobActionsUpdatedDate" title="Updated Date" />
            </Group>
            <Group title="Selection Criteria">
              <Boolean source="OnlyShowCriticalVar" title="Only Lines Preventing Job Closing" />
              <Range firstSource="FromDateVar" lastSource="ToDateVar" title="Date" size="small" />
              <BooleanGroup title="Category">
                <Boolean source="SelectAllVar" title="Select All" />
                <Boolean source="TimeAndExpenseVar" title="Time and Expense" />
                <Boolean source="PurchaseVar" title="Purchase" />
                <Boolean source="PostingVar" title="Posting" />
                <Boolean source="InvoicingVar" title="Invoicing" />
                <Boolean source="SalesOrdersVar" title="Sales Orders" />
                <Boolean source="MiscellaneousVar" title="Miscellaneous" />
              </BooleanGroup>
            </Group>
          </Column>
          <Column>
            <Group title="Job">
              <Field source="ExpectedEndingDate" />
              <Field source="MainJobNumber" />
              <Field source="NumberOfSubJobs" />
            </Group>
            <Group title="Job Progress">
              <Field source="LastJobProgressDateVar" title="Last Progress Date" />
              <Field source="CompletionPercentageHoursVar" title="Completion %, Hours" />
              <Field source="CompletionPercentageCostVar" title="Completion %, Cost" />
            </Group>
            <Group title="Last Job Revenue Recognition">
              <Field source="LastJobRevenueRecognitionDateVar" title="Date" />
              <Field source="LastJobRevenueRecognitionCompletionVar" title="Completion %" />
              <Field source="LastJobRevenueRecognitionAmountVar" title="Revenue Recognition Amount" />
            </Group>
          </Column>
          <Column>
            <Group title="Invoicing">
              <Field source="FirstOpenFinanceEntryDateVar" title="Oldest Open Entry" />
              <Field source="LastInvoiceDate" title="Last Invoice Date" />
              <Field source="OpenBillingPriceVar" title="Open Billing Price" />
              <Field source="NetOnAccountVar" title="Net on Account" />
              <Field source="VATOnAccountVar" title="Tax Net on Account" />
              <Pair firstSource="ApprovedForInvoiceEditing" secondSource="NumberOfDraftsForEditingVar" title="Drafts for Editing" />
              <Pair firstSource="ApprovedForInvoicing" secondSource="NumberOfApprovedDraftsVar" title="Approved for Invoicing" />
            </Group>
            <Group title="Price">
              <Field source="FixedPriceVar" title="Fixed Price" />
              <Field source="BudgetBillingPriceCurrency" title="Budgeted Billing Price" />
              <Field source="QuotationPriceCurrency" title="Quote Price" />
            </Group>
          </Column>
        </Row>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom">
        <Actions all="not HasPMReadOnly()" />
        <Columns>
          <Field source="Category" />
          <Field source="Description" size="large" />
          <Field source="Details" size="huge" />
          <Field source="RelatedEmployeeNumber" title="Related Empl. No." />
          <Field source="RelatedEmployeeNameVar" title="Related Empl. Name" />
          <Field source="TheDate" />
          <Field source="PreventsJobClosing" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="Category" />
          <Field source="Description" size="large" />
          <Field source="Details" size="huge" />
          <Field source="RelatedEmployeeNumber" title="Related Empl. No." />
          <Field source="RelatedEmployeeNameVar" title="Related Empl. Name" />
          <Field source="TheDate" />
          <Field source="PreventsJobClosing" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

