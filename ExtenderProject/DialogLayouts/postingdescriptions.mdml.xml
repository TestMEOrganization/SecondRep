<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="PostingDescriptions">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1" arguments="Name" />
        </Compact>
        <Columns>
          <Field source="Name" />
          <Columns ref="UserUpdateColumns" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Form name="Custom_RoleRestricted_Full">
        <Actions all="true" >
          <Exclude>
            <If condition="not hasRole('Finance Admin')">
              <Create />
              <Update />
              <Delete />
            </If>
          </Exclude>
        </Actions>
        <Column>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
      <Form name="Full">
        <Actions all="true" />
        <Column>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom_RoleRestricted_Full">
        <Actions all="true" >
          <Exclude>
            <If condition="not hasRole('Finance Admin')">
              <Create />
              <Update />
              <Delete />
            </If>
          </Exclude>
        </Actions>
        <Columns>
          <Field source="TypeOfEntry" size="huge" />
          <Field source="Text" size="huge" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="TypeOfEntry" size="huge" />
          <Field source="Text" size="huge" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

