<?xml version="1.0" encoding="UTF-8"?>
<!-- KUN, 22/03/11: Improved tax settlement (39491).-->
<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="ShowVATSettlementEntries">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Columns>
            <Description template="Transaction ^1 (^2)" arguments="TransactionType;TransactionNumber" />
          </Columns>
        </Compact>
        <Columns>
          <Field source="VATSettlementType" />
          <Field source="VATDate" />
          <Field source="VATType" />
          <Field source="VATNature" />
          <Field source="EUVAT" />
          <Field source="VATLevel" />
          <Field source="VATCode" />
          <Field source="VATRate" />
        </Columns>
      </Filter>
      <Filter name="VATSettlement">
        <Compact>
          <Columns>
            <Description template="Transaction ^1 (^2)" arguments="TransactionType;TransactionNumber" />
          </Columns>
        </Compact>
        <Columns>
          <Field source="TransactionType" />
          <Field source="TransactionNumber" />
          <Field source="VATDate" />
          <Field source="VATCode" />
          <Field source="VATRate" />
          <UnitField source="DebitBasisReportingCurrency" unitSource="ReportingCurrency" />
          <UnitField source="CreditBasisReportingCurrency" unitSource="ReportingCurrency" />
          <UnitField source="DebitVATReportingCurrency" unitSource="ReportingCurrency" />
          <UnitField source="CreditVATReportingCurrency" unitSource="ReportingCurrency" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Form name="Full">
        <Row>
          <Column>
            <Group title="Tax Settlement Type">
              <Field source="VATSettlementType" />
              <Field source="VATType" />
              <Field source="VATNature" />
              <Field source="EUVAT" />
              <Field source="VATLevel" />
              <Field source="VATDate" />
              <Field source="VATCode" />
              <Field source="VATRate" />
              <Field source="EUVAT" />
              <Field source="CalculateVATOfVAT" />
              <Field source="VATPopup1" />
              <Field source="VATPopup2" />
              <Field source="VATPopup3" />
              <Field source="VATPopup4" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="VATSettlement">
        <Row>
          <Column>
            <Group title="Tax Settlement Type">
              <Field source="VATDate" />
              <Field source="VATCode" />
              <Field source="VATRate" />
              <Field source="EUVAT" />
              <Field source="CalculateVATOfVAT" />
              <Field source="VATPopup1" />
              <Field source="VATPopup2" />
              <Field source="VATPopup3" />
              <Field source="VATPopup4" />
            </Group>
          </Column>
          <Column>
            <Group title="Tax Amount">
              <UnitField source="DebitBasisCurrency" unitSource="OriginalCurrency" />
              <UnitField source="CreditBasisCurrency" unitSource="OriginalCurrency" />
              <UnitField source="DebitVATCurrency" unitSource="OriginalCurrency" />
              <UnitField source="CreditVATCurrency" unitSource="OriginalCurrency" />
              <UnitField source="DebitBasisBase" unitSource="CompanyCurrency" />
              <UnitField source="CreditBasisBase" unitSource="CompanyCurrency" />
              <UnitField source="DebitVATBase" unitSource="CompanyCurrency" />
              <UnitField source="CreditVATBase" unitSource="CompanyCurrency" />
              <UnitField source="DebitBasisReportingCurrency" unitSource="ReportingCurrency" />
              <UnitField source="CreditBasisReportingCurrency" unitSource="ReportingCurrency" />
              <UnitField source="DebitVATReportingCurrency" unitSource="ReportingCurrency" />
              <UnitField source="CreditVATReportingCurrency" unitSource="ReportingCurrency" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="Custom_RoleRestricted_VATSettlement" open="hasRole('Finance Admin')">
        <Row>
          <Column>
            <Group title="Tax Settlement Type">
              <Field source="VATDate" />
              <Field source="VATCode" />
              <Field source="VATRate" />
              <Field source="EUVAT" />
              <Field source="CalculateVATOfVAT" />
              <Field source="VATPopup1" />
              <Field source="VATPopup2" />
              <Field source="VATPopup3" />
              <Field source="VATPopup4" />
            </Group>
          </Column>
          <Column>
            <Group title="Tax Amount">
              <UnitField source="DebitBasisCurrency" unitSource="OriginalCurrency" />
              <UnitField source="CreditBasisCurrency" unitSource="OriginalCurrency" />
              <UnitField source="DebitVATCurrency" unitSource="OriginalCurrency" />
              <UnitField source="CreditVATCurrency" unitSource="OriginalCurrency" />
              <UnitField source="DebitBasisBase" unitSource="CompanyCurrency" />
              <UnitField source="CreditBasisBase" unitSource="CompanyCurrency" />
              <UnitField source="DebitVATBase" unitSource="CompanyCurrency" />
              <UnitField source="CreditVATBase" unitSource="CompanyCurrency" />
              <UnitField source="DebitBasisReportingCurrency" unitSource="ReportingCurrency" />
              <UnitField source="CreditBasisReportingCurrency" unitSource="ReportingCurrency" />
              <UnitField source="DebitVATReportingCurrency" unitSource="ReportingCurrency" />
              <UnitField source="CreditVATReportingCurrency" unitSource="ReportingCurrency" />
            </Group>
          </Column>
        </Row>
      </Form>
    </UpperPane>
  </Layout>
</MDML>

