<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="FiscalYearTemplates">
    <FilterPane>
      <Filter name="Standard">
        <Actions>
          <If condition="hasWorkspace('GeneralLedgerSetup')">
            <Action source="primary-&gt;FiscalYearTemplates.Create" wizard="CreateFiscalYearTemplate" title="New Fiscal Year Template" />
          </If>
        </Actions>
        <Compact>
          <Description template="^1 (^2)" arguments="Name;FiscalYearTemplateNumber" />
        </Compact>
        <Columns>
          <Field source="FiscalYearTemplateNumber" />
          <Field source="Name" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Wizard name="CreateFiscalYearTemplate" title="Create Fiscal Year Template">
        <Page form="CreateFiscalYearTemplate" title="Fiscal Year Template" description="Please enter the template number and name" />
      </Wizard>
      <Form name="Full">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('GeneralLedgerSetup')">
              <Create />
            </If>
          </Exclude>
        </Actions>
        <Row>
          <Group title="Template{0}">
            <Field source="FiscalYearTemplateNumber" title="Template No." size="large" />
            <Field source="Name" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Row>
      </Form>
      <Form name="CreateFiscalYearTemplate">
        <Actions all="true" />
        <Row>
          <Group title="">
            <Field source="FiscalYearTemplateNumber" title="Template No." size="large" />
            <Field source="Name" />
          </Group>
        </Row>
      </Form>
      <Form name="Custom_RoleRestricted_CompanySpecific" open="hasRole('Finance Admin')" >
        <Actions all="true">
          <Exclude>
            <Create />
            <Delete />
          </Exclude>
        </Actions>
        <Column>
          <If condition="SharedByVar &gt; 1">
            <Group style="attentionText">
              <Description template="^1 companies are using this fiscal year template (for details see Used By)" arguments="SharedByVar" appearance="maximized" size="vast" />
            </Group>
          </If>
          <Group title="Fiscal Year Template{0}">
            <Field source="FiscalYearTemplateNumber" title="Template No." size="large" />
            <Field source="Name" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
      <Form name="CompanySpecific">
        <Actions all="true">
          <Exclude>
            <Create />
            <Delete />
          </Exclude>
        </Actions>
        <Column>
          <If condition="SharedByVar &gt; 1">
            <Group style="attentionText">
              <Description template="^1 companies are using this fiscal year template (for details see Used By)" arguments="SharedByVar" appearance="maximized" size="vast" />
            </Group>
          </If>
          <Group title="Fiscal Year Template{0}">
            <Field source="FiscalYearTemplateNumber" title="Template No." size="large" />
            <Field source="Name" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')" >
        <Actions all="true" />
        <Columns>
          <Field source="FiscalYearStart" />
          <Field source="FiscalYearEnd" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="FiscalYearStart" />
          <Field source="FiscalYearEnd" />
        </Columns>
      </Table>
      <Table name="Extended">
        <Actions all="true" />
        <Columns>
          <Field source="FiscalYearStart" />
          <Field source="FiscalYearEnd" />
          <Field source="Blocked" title="Blocked{Is}" />
          <Columns ref="UserUpdateColumns" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

