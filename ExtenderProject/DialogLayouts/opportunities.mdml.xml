            <Group ref="UserUpdateGroup" />
          </Column>
          <Column>
            <Group title="Contact Company">
              <Field source="ContactCompanyNumber" />
              <Field source="Name1" appearance="maximized" shadowTitle="Name" />
              <Field source="Name2" appearance="maximized" shadowTitle="Address 1" />
              <Field source="Name3" appearance="maximized" shadowTitle="Address 2" />
              <ZipCity citySource="PostalDistrict" zipSource="ZipCode" appearance="maximized" cityShadowTitle="City" zipShadowTitle="Postal Code" />
              <Field source="Name4" appearance="maximized" shadowTitle="Address 3" />
              <Field source="Name5" appearance="maximized" shadowTitle="Address 4" />
              <Field source="Attention" />
              <Field source="Country" />
              <Field source="Telephone" />
              <Field source="Telefax" />
              <Field source="Telex" />
              <Field source="ElectronicMailAddress" title="E-mail{native 1}" />
            </Group>
            <Group title="Status Update">
              <Field source="WonPhase" />
              <Field source="LostPhase" />
            </Group>
            <Group title="Campaign">
              <Reference foreignKey="CampaignNumber_Campaign" />
            </Group>
            <Group title="Company">
              <Reference foreignKey="CompanyNumber_CompanyInformation" />
              <Field source="CompanyBaseCurrencyVar" title="Base Currency" />
            </Group>
            <Group title="Event flow">
              <Field source="EventFlowType" />
              <Field source="EventFlowNumber" />
            </Group>
            <Group title="Access Level">
              <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
            </Group>
            <Group ref="OptionListGroup_5" />
          </Column>
        </Row>
        <Row>
          <Group ref="DimensionGroup" />
        </Row>
        <Row>
          <Group title="Remarks{pl}">
            <Field source="Remark1" appearance="maximized" />
            <Field source="Remark2" appearance="maximized" />
            <Field source="Remark3" appearance="maximized" />
            <Field source="Remark4" appearance="maximized" />
            <Field source="Remark5" appearance="maximized" />
          </Group>
        </Row>
        <Row>
          <Group title="Extra Fields">
            <Column>
              <Field source="OpportunityText1" />
              <Field source="OpportunityText2" />
              <Field source="OpportunityText3" />
              <Field source="OpportunityText4" />
              <Field source="OpportunityText5" />
              <Field source="OpportunityText6" />
              <Field source="OpportunityText7" />
              <Field source="OpportunityText8" />
              <Field source="OpportunityText9" />
              <Field source="OpportunityText10" />
              <Field source="Date1" />
              <Field source="Date2" />
              <Field source="Date3" />
              <Field source="Date4" />
              <Field source="Date5" />
              <Field source="Real1" />
              <Field source="Real2" />
              <Field source="Real3" />
              <Field source="Real4" />
              <Field source="Real5" />
            </Column>
            <Column>
              <Field source="Amount1" />
              <Field source="Amount2" />
              <Field source="Amount3" />
              <Field source="Amount4" />
              <Field source="Amount5" />
              <Boolean source="Boolean1" />
              <Boolean source="Boolean2" />
              <Boolean source="Boolean3" />
              <Boolean source="Boolean4" />
              <Boolean source="Boolean5" />
              <Field source="Popup1" />
              <Field source="Popup2" />
              <Field source="Popup3" />
              <Field source="Popup4" />
              <Field source="Popup5" />
              <Field source="Popup6" />
              <Field source="Popup7" />
              <Field source="Popup8" />
              <Field source="Popup9" />
              <Field source="Popup10" />
            </Column>
          </Group>
        </Row>
      </Form>
