            <Group title="Persons">
              <Reference foreignKey="SalesPersonNumber_Employee" />
              <Reference foreignKey="ContactPersonNumber1_ContactPerson" />
              <Reference foreignKey="ContactPersonNumber2_ContactPerson" />
              <Reference foreignKey="ContactPersonNumber3_ContactPerson" />
