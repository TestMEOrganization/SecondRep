<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="Opportunities">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1 (^2)" arguments="Description;OpportunityNumber" />
        </Compact>
        <Columns>
          <Field source="OpportunityNumber" />
          <Field source="Description" />
          <Field source="OpportunityType" />
          <Field source="Status" />
          <Field source="ContactCompanyNumber" />
          <Field source="Name1" />
          <Field source="Name2" />
          <Field source="Name3" />
          <Field source="ZipCode" />
          <Field source="PostalDistrict" />
        </Columns>
      </Filter>
      <Filter name="UpdateResponsible">
        <ControlBar>
          <Selection default="SelectedOpportunities">
            <Option title="Selected Opportunities" name="SelectedOpportunities" restriction="Status = OpportunityStatusType'Open and parent.parent.UpdateOpportunitiesVar and OpportunityNumber ge parent.parent.FromOpportunityNumberVar and (OpportunityNumber le parent.parent.ToOpportunityNumberVar or parent.parent.ToOpportunityNumberVar = '')" />
          </Selection>
        </ControlBar>
        <Columns>
          <Field source="Description" />
          <Field source="OpportunityNumber" />
          <Field source="Name1" title="Contact Company" />
          <Field source="ContactCompanyNumber" />
          <Field source="Phase" />
          <UnitField source="SalesEstimateCurrency" unitSource="Currency" />
          <UnitField source="WeightedSalesEstCurrency" unitSource="Currency" title="Weighted Sales Estimate" />
          <Field source="ProbabilityPercentage" />
          <Field source="StartingDate" />
          <Field source="ExpectedEndingDate" />
        </Columns>
      </Filter>
      <Filter name="Demo">
        <Actions>
          <Action source="primary-&gt;Opportunities.Create" wizard="CreateOpportunityWizard" />
        </Actions>
        <ControlBar>
          <Selection default="MyOpenOpportunities">
            <Option title="My Open Opportunities" name="MyOpenOpportunities" restriction="SalesPersonNumber = userEmployeeNumber() and Status = OpportunityStatusType'Open" />
            <Option title="All My Opportunities" name="MyOpportunities" restriction="SalesPersonNumber = userEmployeeNumber()" />
            <Option title="Open Associated Opportunities" name="AssociatedOpenOpportunities" restriction="EmployeeNumber = userEmployeeNumber() and Status = OpportunityStatusType'Open" />
            <Option title="All Associated Opportunities" name="AssociatedOpportunities" restriction="EmployeeNumber = userEmployeeNumber()" />
            <Option title="All Open Opportunities" name="AllOpenOpportunities" restriction="Status = OpportunityStatusType'Open" />
            <Option title="All Opportunities" name="AllOpportunities" />
          </Selection>
        </ControlBar>
        <Compact>
          <Description template="^1 (^2), ^3" arguments="Description;OpportunityNumber;Name1" />
        </Compact>
        <Columns>
          <Field source="Description" />
          <Field source="OpportunityNumber" />
          <Field source="Name1" title="Contact Company" />
          <Field source="Status" />
          <Field source="Phase" />
          <UnitField source="SalesEstimateCurrency" unitSource="Currency" />
          <UnitField source="WeightedSalesEstCurrency" unitSource="Currency" title="Weighted Sales Estimate" />
          <Field source="ProbabilityPercentage" />
          <Field source="StartingDate" />
          <Field source="ExpectedEndingDate" />
          <Field source="CloseDate" />
          <Field source="SalesPersonName1" title="Sales Rep." />
        </Columns>
      </Filter>
      <Filter name="Demo_ContactCompanyHome">
        <Actions>
          <If condition="parent.ContactCompanyNumber != ''">
            <Action source="with.Create" wizard="CreateContactCompanyOpportunityWizard" />
          </If>
        </Actions>
        <ControlBar>
          <Selection default="OpenOpportunities">
            <Option title="Open Opportunities" name="OpenOpportunities" restriction="Status = OpportunityStatusType'Open" />
            <Option title="All Opportunities" name="AllOpportunities" />
          </Selection>
        </ControlBar>
        <Compact>
          <Description template="^1 (^2), ^3" arguments="Description;OpportunityNumber;Name1" />
        </Compact>
        <Columns>
          <Field source="Description" />
          <Field source="OpportunityNumber" />
          <Field source="Status" />
          <Field source="Phase" />
          <UnitField source="SalesEstimateCurrency" unitSource="Currency" />
          <UnitField source="WeightedSalesEstCurrency" unitSource="Currency" title="Weighted Sales Estimate" />
          <Field source="ProbabilityPercentage" />
          <Field source="StartingDate" />
          <Field source="ExpectedEndingDate" />
          <Field source="CloseDate" />
          <Field source="SalesPersonName1" title="Sales Rep." />
        </Columns>
      </Filter>
      <Filter name="Minimal">
        <ControlBar>
          <Selection default="OpenOpportunities">
            <Option name="OpenOpportunities" title="Leads" restriction="CloseDate gt currentDate() or CloseDate = date(nulldate)" />
          </Selection>
        </ControlBar>
        <Columns>
          <Field source="Description" />
          <Field source="OpportunityNumber" />
          <Field source="Name1" title="Contact Company" />
          <Field source="Status" />
          <Field source="Phase" />
          <UnitField source="SalesEstimateCurrency" unitSource="Currency" />
          <UnitField source="WeightedSalesEstCurrency" unitSource="Currency" title="Weighted Sales Estimate" />
          <Field source="ProbabilityPercentage" />
          <Field source="StartingDate" />
          <Field source="ExpectedEndingDate" />
          <Field source="SalesPersonName1" title="Sales Rep." />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Define>
        <Include fragment="GD_OptionLists" />
        <Include fragment="GD_Dimensions" />
        <Trigger name="CreateContactCompanyOpportunity">
          <Assign source="ContactCompanyNumber" value="parent.parent.ContactCompanyNumber" />
        </Trigger>
      </Define>
      <Wizard name="CreateOpportunityWizard" title="Create Opportunity">
        <Page form="CreateOpportunityWizardPage" title="Opportunity" />
      </Wizard>
      <Wizard name="CreateContactCompanyOpportunityWizard" title="Create Opportunity">
        <Page form="CreateContactCompanyOpportunityWizardPage" title="Opportunity" preTrigger="CreateContactCompanyOpportunity" />
      </Wizard>
      <Form name="Full">
        <Actions all="true" />
        <Row>
          <Column>
            <Group title="Opportunity">
              <Reference foreignKey="OpportuntiyNumber_Opportunity" />
