            <Group title="Contact Persons">
              <Reference foreignKey="ContactPersonNumber1_ContactPerson" title="Contact Person 1" />
              <Reference foreignKey="ContactPersonNumber2_ContactPerson" title="Contact Person 2" />
              <Reference foreignKey="ContactPersonNumber3_ContactPerson" title="Contact Person 3" />
            </Group>
            <Group ref="UserUpdateGroup" />
          </Column>
        </Row>
