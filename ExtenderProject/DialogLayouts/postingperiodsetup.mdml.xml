<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="PostingPeriodSetup">
    <FilterPane>
      <Filter name="Standard">
        <Actions>
          <If condition="hasWorkspace('TransactionTypes')">
            <Action source="with.Create" wizard="CreatePostingPeriodSetup" title="New Posting Period Setup" />
          </If>
        </Actions>
        <Compact>
          <Description template="^1 (^2)" arguments="Name;PostingPeriodSetupNumber" />
        </Compact>
        <Columns>
          <Field source="PostingPeriodSetupNumber" size="large" />
          <Field source="Name" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Wizard name="CreatePostingPeriodSetup" title="Create Posting Period Setup">
        <Page form="CreatePostingPeriodSetup" title="Posting Period Setup" description="Please enter the posting period setup number" />
      </Wizard>
      <Wizard name="CopyPostingPeriodSetup" title="Copy Posting Period Setup">
        <Page form="CopyPostingPeriodSetupPage1" title="Posting Period Setup" description="Please enter the posting period to copy the lines from" />
      </Wizard>
      <Form name="Full">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('TransactionTypes')">
              <Create />
            </If>
          </Exclude>
          <Action source="CopyPostingPeriodSetup" wizard="CopyPostingPeriodSetup" />
        </Actions>
        <Row>
          <Column style="fullWidth">
            <Group title="Posting Period Setup">
              <Field source="PostingPeriodSetupNumber" />
              <Field source="Name" />
            </Group>
            <Group title="Access Level">
              <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
            </Group>
          </Column>
          <Column>
            <Group ref="UserUpdateGroup" />
          </Column>
        </Row>
      </Form>
      <Form name="CreatePostingPeriodSetup">
        <Actions all="true" />
        <Row>
          <Group title="" style="fullWidth">
            <Field source="PostingPeriodSetupNumber" />
            <Field source="Name" />
          </Group>
        </Row>
      </Form>
      <Form name="CopyPostingPeriodSetupPage1">
        <Actions all="true" />
        <Group title="">
          <Field source="FromPostingPeriodSetupNumberVar" title="From Posting Period Setup" mandatory="true" />
        </Group>
      </Form>
      <Form name="Custom_RoleRestricted_CompanySpecific" open="hasRole('Finance Admin')" >
        <Actions>
          <Update />
          <Action source="ValidatePostingPeriodSetup" />
          <Action source="CopyPostingPeriodSetup" wizard="CopyPostingPeriodSetup" />
        </Actions>
        <Row>
          <Column style="fullWidth">
            <If condition="SharedByVar &gt; 1">
              <Group style="attentionText">
                <Description template="^1 companies are using this posting period setup (for details see Used By)" arguments="SharedByVar" appearance="maximized" />
              </Group>
            </If>
            <Group title="Posting Period Setup">
              <Field source="PostingPeriodSetupNumber" />
              <Field source="Name" />
            </Group>
            <Group title="Access Level">
              <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
            </Group>
            <Group ref="UserUpdateGroup" />
          </Column>
        </Row>
      </Form>
      <Form name="CompanySpecific">
        <Actions>
          <Update />
          <Action source="ValidatePostingPeriodSetup" />
          <Action source="CopyPostingPeriodSetup" wizard="CopyPostingPeriodSetup" />
        </Actions>
        <Row>
          <Column style="fullWidth">
            <If condition="SharedByVar &gt; 1">
              <Group style="attentionText">
                <Description template="^1 companies are using this posting period setup (for details see Used By)" arguments="SharedByVar" appearance="maximized" />
              </Group>
            </If>
            <Group title="Posting Period Setup">
              <Field source="PostingPeriodSetupNumber" />
              <Field source="Name" />
            </Group>
            <Group title="Access Level">
              <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
            </Group>
            <Group ref="UserUpdateGroup" />
          </Column>
        </Row>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')" >
        <Actions all="true" />
        <Columns>
          <Field source="Name" />
          <Field source="Description" />
          <Field source="GLOpenPostingPeriodStart" title="G/L Start" />
          <Field source="GLOpenPostingPeriodEnd" title="G/L End" />
          <Field source="JobCostOpenPostingPeriodStart" title="Job Cost Start" />
          <Field source="JobCostOpenPostingPeriodEnd" title="Job Cost End" />
          <Field source="AccrualOpenPostingPeriodEnd" title="Accrual End" />
          <Field source="TransactionTypeGroupNumber" />
          <Columns ref="UserUpdateColumns" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="Name" />
          <Field source="Description" />
          <Field source="GLOpenPostingPeriodStart" title="G/L Start" />
          <Field source="GLOpenPostingPeriodEnd" title="G/L End" />
          <Field source="JobCostOpenPostingPeriodStart" title="Job Cost Start" />
          <Field source="JobCostOpenPostingPeriodEnd" title="Job Cost End" />
          <Field source="AccrualOpenPostingPeriodEnd" title="Accrual End" />
          <Field source="TransactionTypeGroupNumber" />
          <Columns ref="UserUpdateColumns" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

