<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="CompanyInfo">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1 (^2)" arguments="Name1;CompanyNumber" />
        </Compact>
        <Columns>
          <Field source="CompanyNumber" />
          <Field source="Name1" />
          <Field source="Name2" />
          <Field source="Name3" />
          <Field source="ZipCode" />
          <Field source="PostalDistrict" />
          <Field source="Name4" />
          <Field source="Name5" />
          <Field source="Country" />
          <Field source="Telephone" />
        </Columns>
      </Filter>
      <Filter name="Minimal">
        <Columns>
          <Field source="CompanyNumber" />
          <Field source="Name1" title="Name" />
        </Columns>
      </Filter>
      <Filter name="MinimalWithLink">
        <Columns>
          <Field source="CompanyNumber" />
          <Field source="Name1" title="Name" />
          <Link workspace="CompanyHome" template="More details..." title=" " icon="WorkspaceLink">
            <Waypoint pane="CompanyInfo">
              <Restriction template="Selected Company" expression="CompanyNumber=target.CompanyNumber" />
              <Focus>
                <Match field="CompanyNumber" value="CompanyNumber" />
              </Focus>
            </Waypoint>
            <Target pane="Information" />
          </Link>
        </Columns>
      </Filter>
      <Filter name="Home">
        <Actions>
          <Action source="with.Create" wizard="CreateCompany" />
        </Actions>
        <ControlBar>
          <Selection default="MyCompanies">
            <Option name="MyCompanies" title="My Companies" restriction="UserEmployeeNumber() != ''                                      and (EmployeeNumber1 = UserEmployeeNumber()                           or EmployeeNumber2 = UserEmployeeNumber()                           or EmployeeNumber3 = UserEmployeeNumber()                           or EmployeeNumber4 = UserEmployeeNumber()                           or EmployeeNumber5 = UserEmployeeNumber())" />
            <Option name="AllCompanies" title="All Companies" />
          </Selection>
        </ControlBar>
        <Compact>
          <Description template="^2 (^1)" arguments="CompanyNumber;Name1" />
        </Compact>
        <Columns>
          <Field source="CompanyNumber" />
          <Field source="Name1" title="Company Name" />
          <Field source="Country" />
          <Field source="Name2" title="Address" />
          <Field source="PostalDistrict" />
          <Field source="ZipCode" />
          <Field source="Telephone" />
          <Field source="Currency" />
          <Field source="ParentCompany" />
          <Field source="Blocked" />
        </Columns>
      </Filter>
      <Filter name="Home_NoPredefinedFilters">
        <Columns>
          <Field source="CompanyNumber" />
          <Field source="Name1" title="Company Name" />
          <Field source="Country" />
          <Field source="Name2" title="Address" />
