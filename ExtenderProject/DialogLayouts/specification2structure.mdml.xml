<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="Specification2Structure">
    <UpperPane>
      <Wizard name="MoveSumLevels" title="Move Sum Levels">
        <Page form="MoveSumLevelsPage1" title="Level" description="Please enter the level to move from" />
      </Wizard>
      <Wizard name="ItemizeStructure" title="Itemize Structure">
        <Page form="ItemizeStructurePage1" title="Level" description="Please enter the level to itemize to" />
      </Wizard>
      <Form name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')">
        <Actions all="true">
          <Action source="MoveSumLevels" wizard="MoveSumLevels" />
          <Action source="ItemizeStructure" wizard="ItemizeStructure" />
        </Actions>
        <Row>
          <Group title="Show">
            <BooleanGroup title="">
              <Boolean source="ShowHeading" title="Headings" />
              <Boolean source="ShowUnderlining" title="Underlinings" />
              <Boolean source="ShowPageBreak" title="Page Break" />
              <Boolean source="ShowBlockedSpecification2" title="Blocked" />
            </BooleanGroup>
          </Group>
          <Group ref="UserUpdateGroup" />
        </Row>
      </Form>
      <Form name="Full">
        <Actions all="true">
          <Action source="MoveSumLevels" wizard="MoveSumLevels" />
          <Action source="ItemizeStructure" wizard="ItemizeStructure" />
        </Actions>
        <Row>
          <Group title="Show">
            <BooleanGroup title="">
              <Boolean source="ShowHeading" title="Headings" />
              <Boolean source="ShowUnderlining" title="Underlinings" />
              <Boolean source="ShowPageBreak" title="Page Break" />
              <Boolean source="ShowBlockedSpecification2" title="Blocked" />
            </BooleanGroup>
          </Group>
          <Group ref="UserUpdateGroup" />
        </Row>
      </Form>
      <Form name="MoveSumLevelsPage1">
        <Actions>
          <Create />
          <Update />
          <Delete />
          <Print />
          <PrintThis />
        </Actions>
        <Row>
          <Group title="">
            <Field source="MoveFromLevelVar" title="Level" />
          </Group>
        </Row>
      </Form>
      <Form name="ItemizeStructurePage1">
        <Actions>
          <Create />
          <Update />
          <Delete />
          <Print />
          <PrintThis />
        </Actions>
        <Row>
          <Group title="">
            <Field source="ItemizeToLevelVar" title="Level" />
          </Group>
        </Row>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')">
        <Actions all="true" />
        <Columns>
          <Field source="LineNumber" />
          <Field source="LineType" title="Line Type" />
          <Field source="SumLevel" />
          <Field source="Expand" />
          <Field source="Specification2Name" title="Name" />
          <Field source="Description" />
          <Field source="Blocked" />
          <Field source="NewLineNumberVar" title="New Line No." />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="LineNumber" />
          <Field source="LineType" title="Line Type" />
          <Field source="SumLevel" />
          <Field source="Expand" />
          <Field source="Specification2Name" title="Name" />
          <Field source="Description" />
          <Field source="Blocked" />
          <Field source="NewLineNumberVar" title="New Line No." />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

