        </Columns>
      </Filter>
      <Filter name="CreditOrderHome">
        <Actions>
        	<Action source="with.Create" wizard="CreateOrderWizard" />
        </Actions>
        <ControlBar>
          <Selection default="MyOpenCreditOrders">
            <Option title="My Open Credit Orders" name="MyOpenCreditOrders" restriction="SalesPersonNumber = userEmployeeNumber() and Invoiced = OrderStatusType'No" />
            <Option title="All My Credit Orders" name="MyCreditOrders" restriction="SalesPersonNumber = userEmployeeNumber()" />
            <Option title="Open Credit Orders on My Jobs" name="MyJobsOpenCreditOrders" restriction="ProjectManagerNumber = userEmployeeNumber() and Invoiced = OrderStatusType'No" />
            <Option title="All Credit Orders on My Jobs" name="MyJobsCreditOrders" restriction="ProjectManagerNumber = userEmployeeNumber()" />
            <Option title="All Open Credit Orders" name="AllOpenCreditOrders" restriction="Invoiced = OrderStatusType'No" />
            <Option title="All Credit Orders" name="AllCreditOrders" />
          </Selection>
        </ControlBar>
        <Compact>
          <Description template="Order No. ^1, ^2" arguments="OrderNumber;Name1" />
        </Compact>
        <Columns>
          <Field source="OrderNumber" />
          <Field source="Name1" title="Customer" />
          <Field source="SalesPerson" />
          <Field source="JobNumber" />
          <Field source="JobName" />
          <Field source="ProjectManagerName" />
          <UnitField source="OrderSumCurrency" unitSource="Currency" title="Total" />
          <Field source="CreatedDate" />
          <Field source="Approved" />
          <Field source="LastInvoiceDate" title="Date Credited" />
        </Columns>
      </Filter>
      <Filter name="C_CreditOrderHome_Commerce">
        <Actions>
          <Action source="with.Create" wizard="C_CreateOrderWizardCustomerProject" title="Credit Order to Customer with Project" name="C_CreateOrderWizardCustomerProject"/>
