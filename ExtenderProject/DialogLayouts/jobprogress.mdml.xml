<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="JobProgress">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1 (^2), ^3" arguments="JobName;JobNumber;Name1" />
        </Compact>
        <Columns>
          <Field source="JobNumber" />
          <Field source="JobName" />
          <Field source="JobGroup" />
          <Field source="NotInvoiceable" />
          <Field source="InternalJob" />
          <Field source="Status" />
          <Field source="ConvertedBy" />
          <Field source="ConversionDate" />
          <Field source="ProjectManagerNumber" />
          <Field source="SalesPersonNumber" />
        </Columns>
      </Filter>
      <Filter name="Custom">
        <Compact>
          <Description template="^1 (^2), ^3" arguments="JobName;JobNumber;Name1" />
        </Compact>
        <Columns>
          <Field source="JobNumber" />
          <Field source="JobName" />
          <Field source="JobGroup" />
          <Field source="NotInvoiceable" />
          <Field source="InternalJob" />
          <Field source="Status" />
          <Field source="ConvertedBy" />
          <Field source="ConversionDate" />
          <Field source="ProjectManagerNumber" />
          <Field source="SalesPersonNumber" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Define>
        <Style name="gridStyle" anchor="both" justify="right" size="small">
          <Label size="small" />
        </Style>
        <Widget name="barchart" source="BarChartWidget" />
        <DataSource name="ProgressHours">
          <Base legends="'Actual';'ETC';'Total'">
            <Category legends="EstimateDate1Var ; EstimateDate2Var ; EstimateDate3Var ; EstimateDate4Var; EstimateDate5Var">
              <Series values="asReal(Executed1Var);asReal(EstimatedTimeToCompletion1Var);asReal(Total1Var)" />
              <Series values="asReal(Executed2Var);asReal(EstimatedTimeToCompletion2Var);asReal(Total2Var)" />
              <Series values="asReal(Executed3Var);asReal(EstimatedTimeToCompletion3Var);asReal(Total3Var)" />
              <Series values="asReal(Executed4Var);asReal(EstimatedTimeToCompletion4Var);asReal(Total4Var)" />
              <Series values="asReal(Executed5Var);asReal(EstimatedTimeToCompletion5Var);asReal(Total5Var)" />
            </Category>
          </Base>
        </DataSource>
      </Define>
      <Wizard name="NewProgressWizard" title="New Progress Evaluation" description="Enter a date to create a new job progress evaluation">
        <Page form="NewProgressWizardPage1" title="Evaluate Job Progress" />
      </Wizard>
      <Form name="Full">
        <Actions all="true">
          <Action source="UpdateActionForWizard" title="New Progress Evaluation" wizard="NewProgressWizard" />
        </Actions>
        <Row>
          <Column>
            <Group title="Job">
              <Reference foreignKey="JobNumber_JobHeader" />
              <Reference foreignKey="ProjectManagerNumber_Employee" />
              <Field source="CurrentPlanningBudgetType" />
            </Group>
            <Group title="Customer">
              <Reference foreignKey="CustomerNumber_Customer" descriptionSource="Name1" />
            </Group>
          </Column>
          <Column>
            <Group title="Show Progress Status">
              <Boolean source="ShowPassiveVar" title="Idle{Must correspond to the popup ProgressStatusType} " />
              <Boolean source="ShowBehindScheduleVar" title="Behind Schedule{must equal the popup ProgressStatusType}" />
              <Boolean source="ShowAsPlannedVar" title="On Schedule{Must correspond to the popup ProgressStatusType}" />
              <Boolean source="ShowAheadOfScheduleVar" title="Ahead Of Schedule{must equal the popup ProgressStatusType}" />
              <Field source="DelayThresholdPercentageVar" title="Delay Threshold %{1}" />
              <Field source="DelayThresholdHoursVar" title="Delay Threshold, Hours" />
              <Field source="ShowActivityTypeVar" title="Show Activity Type" />
            </Group>
            <Group title="Time to Completion Estimates">
              <Boolean source="GetEstimatedTimeToCompletionFromAllResourcesVar" title="Get Est. to Compl. from All Resources" />
            </Group>
          </Column>
        </Row>
        <Row>
          <Group title="Progress">
            <Grid style="grid_compact">
              <Header cells="|Date|;|Planned|;|Actual{hours/cost}|;|ETC{for hours or cost prices}|;|Total{In total}|;|Baseline{Baseline}|;|Baseln. Dev.{Abbreviation of Baseline Deviation, i.e. Baseline Deviation}|;|Dev.|;|Acc. Dev.|;|CP %|;|Remarks{sg}|" />
              <Row cells="EstimateDate1Var;Planned1Var;Executed1Var;EstimatedTimeToCompletion1Var;Total1Var;Baseline1Var;BaselineDeviation1Var;Deviation1Var;AccumulatedDeviation1Var;CompletionPercentage1Var;Remark1Var" />
              <Row cells="EstimateDate2Var;Planned2Var;Executed2Var;EstimatedTimeToCompletion2Var;Total2Var;Baseline2Var;BaselineDeviation2Var;Deviation2Var;AccumulatedDeviation2Var;CompletionPercentage2Var;Remark2Var" />
              <Row cells="EstimateDate3Var;Planned3Var;Executed3Var;EstimatedTimeToCompletion3Var;Total3Var;Baseline3Var;BaselineDeviation3Var;Deviation3Var;AccumulatedDeviation3Var;CompletionPercentage3Var;Remark3Var" />
              <Row cells="EstimateDate4Var;Planned4Var;Executed4Var;EstimatedTimeToCompletion4Var;Total4Var;Baseline4Var;BaselineDeviation4Var;Deviation4Var;AccumulatedDeviation4Var;CompletionPercentage4Var;Remark4Var" />
              <Row cells="EstimateDate5Var;Planned5Var;Executed5Var;EstimatedTimeToCompletion5Var;Total5Var;Baseline5Var;BaselineDeviation5Var;Deviation5Var;AccumulatedDeviation5Var;CompletionPercentage5Var;Remark5Var" />
            </Grid>
            <Boolean title="Show Original Figures" source="ShowOriginalFiguresVar" />
            <Boolean title="Create Budget Lines for Unbudgetted Tasks" source="CreateBudgetlinesForUnbudgettedTasksVar" />
            <Field title="Unit of Measure{can be hours or billing price}" source="UnitOfMeasureVar" />
          </Group>
        </Row>
        <Row>
          <Column>
            <Group title="Pending Registrations">
              <Field source="PendingRegistrationsVar" title="Pending Reg." />
              <Field source="PendingHoursVar" title="Hours" />
              <Field source="PendingCostPriceVar" title="Cost{Cost Price}" />
            </Group>
            <Group title="Planning Budget Status">
              <Field source="SubmittedVar" title="Submitted" />
              <Field source="SubmittedByVar" title="Submitted by" />
              <Field source="DateSubmittedVar" title="Date" />
              <Field source="ApprovedVar" title="Approved{Sg}" />
              <Field source="ApprovedByVar" title="Approved by" />
              <Field source="ApprovalDateVar" title="Date" />
              <Field source="ReopenedVar" title="Reopened" />
              <Field source="ReopenedByVar" title="Reopened by" />
              <Field source="DateReopenedVar" title="Date" />
            </Group>
          </Column>
          <Column>
            <Group title="Planning Budget Revision">
              <Field source="BudgetRevisionNumberVar" title="Revision No." />
              <Field source="RevisionRemark1Var" title="Remarks{sg}" />
              <Field source="RevisionRemark2Var" title="" />
              <Field source="RevisionRemark3Var" title="" />
              <Field source="RevisionRemark4Var" title="" />
              <Field source="RevisionRemark5Var" title="" />
              <Field source="RevisionRemark6Var" title="" />
              <Field source="RevisionRemark7Var" title="" />
              <Field source="RevisionRemark8Var" title="" />
              <Field source="RevisionRemark9Var" title="" />
              <Field source="RevisionRemark10Var" title="" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="NewProgressWizardPage1">
        <Actions all="true" />
        <Group>
          <Field source="EstimateDate5Var" title="Estimate Date" mandatory="true" />
          <Field source="Remark5Var" title="Remark" />
          <Boolean source="GetEstimatedTimeToCompletionFromAllResourcesVar" title="Get ETC from All Resources" />
          <Boolean source="CreateBudgetlinesForUnbudgettedTasksVar" title="Create Budget Lines for Unbudgetted Tasks" />
        </Group>
      </Form>
      <Form name="Standard">
        <Actions all="true" collapseOrder="other approval default">
          <Action source="UpdateActionForWizard" title="New Progress Evaluation" wizard="NewProgressWizard" />
          <Order>
            <Group name="default" grouped="never">
              <Action ref="UpdateActionForWizard" />
            </Group>
            <Group name="approval" title="Approval" grouped="never">
              <Action ref="MDK_SubmitPlanningBudget" />
              <Action ref="SubmitBudget" />
              <Action ref="ApproveBudget" />
              <Action ref="ReopenBudget" />
            </Group>
            <Group name="other" title="Other Actions" grouped="always">
              <Action ref="CreateBudget" />
              <Action ref="CalculatePendingRegistrations" />
            </Group>
          </Order>
        </Actions>
        <Column>
          <Group title="ETC Information">
            <If condition="ApprovedVar">
              <Field source="EstimateDate5Var" title="Estimate Date" open="false" />
              <Field source="Remark5Var" title="Remark" open="false" />
            </If>
            <Else>
              <Field source="EstimateDate5Var" title="Estimate Date" />
              <Field source="Remark5Var" title="Remark" />
            </Else>
            <Field source="EstimateDate4Var" title="Last Estimate" />
            <Field source="UnitOfMeasureVar" title="Enter ETC in" />
          </Group>
          <Group title="Progress History">
            <Style>
              <Chart chartOrientation="vertical" showLabels="false" showLegend="true" fontSize="tiny" />
            </Style>
            <Element appearance="maximized">
              <Widget ref="barchart" />
              <DataSource ref="ProgressHours" />
            </Element>
          </Group>
        </Column>
        <Column>
          <Group title="Totals">
            <Grid style="grid_compact">
              <Define>
                <Style name="TotalHoursRed" ref="trafficlightForegroundRed" condition="field() like 'TotalHoursVar' and TotalHoursVar gt BaselineHoursVar" />
                <Style name="TotalHoursGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalHoursVar'" />
                <Style name="CostTimeRed" ref="trafficlightForegroundRed" condition="field() like 'TotalCostTimeVar' and TotalCostTimeVar gt BaselineCostTimeVar" />
                <Style name="CostTimeGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalCostTimeVar'" />
                <Style name="CostAmountRed" ref="trafficlightForegroundRed" condition="field() like 'TotalCostAmountActivitiesVar' and TotalCostAmountActivitiesVar gt BaselineCostAmountVar" />
                <Style name="CostAmountGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalCostAmountActivitiesVar'" />
                <Style name="CostTotalRed" ref="trafficlightForegroundRed" condition="field() like 'TotalCostVar' and TotalCostVar gt BaselineCostTotalVar" />
                <Style name="CostTotalGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalCostVar'" />
              </Define>
              <Header title="" cells="|Baseline|;      |Actual|;     |ETC|;               |Current Est.|;        |% Completed|;       |Dev. Previous|;   |Baseline Dev.|;       |Suggested ETC|;              |Actuals w/o Budg.|" style="grid_header" />
              <Row title="Hours" cells="BaselineHoursVar;   UsedHoursVar;   EstimatedTimeToCompletionVar;    TotalHoursVar;        CompletionPercentageTimeVar;DeviationHoursVar;   BaselineDeviationHoursVar;  SuggestedEstimatedTimeToCompletionVar;   UsedHoursNotBudgetedVar" style="TotalHoursRed,TotalHoursGreen" />
              <Row title="Cost, Time" cells="BaselineCostTimeVar;UsedCostTimeVar;EstimatedCostToCompletionTimeVar;TotalCostTimeVar;_;_;_;SuggestedEstimatedCostToCompletionTimeVar;_" style="CostTimeRed,CostTimeGreen" />
              <Row title="Cost, Amount" cells="BaselineCostAmountVar;UsedCostAmountVar;EstimatedCostToCompletionAmountVar;TotalCostAmountActivitiesVar;_;_;_;SuggestedEstimatedCostToCompletionAmountVar;UsedAmountCostNotBudgetedVar" style="CostAmountRed,CostAmountGreen" />
              <Row title="Cost, Total" cells="BaselineCostTotalVar;UsedCostTotalVar;EstimatedCostToCompletionVar;TotalCostVar;CompletionPercentageCostVar;DeviationCostTotalVar;BaselineDeviationCostTotalVar;SuggestedEstimatedCostToCompletionVar;_" style="CostTotalRed,CostTotalGreen" />
            </Grid>
          </Group>
          <Group title="History">
            <Grid style="gridStyle">
              <Header cells="|Baseline|;|Actual|;|ETC|;|Current Est.|;|% Completed|;|Dev. Previous|;|Baseline Dev.|;|Remarks|" style="grid_header" />
              <Row titleValue="EstimateDate5Var" cells="Baseline5Var;Executed5Var;-EstimatedTimeToCompletion5Var;Total5Var;CompletionPercentage5Var;Deviation5Var;BaselineDeviation5Var;-Remark5Var" />
              <Row titleValue="EstimateDate4Var" cells="Baseline4Var;Executed4Var;EstimatedTimeToCompletion4Var;Total4Var;CompletionPercentage4Var;Deviation4Var;BaselineDeviation4Var;Remark4Var" />
              <Row titleValue="EstimateDate3Var" cells="Baseline3Var;Executed3Var;EstimatedTimeToCompletion3Var;Total3Var;CompletionPercentage3Var;Deviation3Var;BaselineDeviation3Var;Remark3Var" />
              <Row titleValue="EstimateDate2Var" cells="Baseline2Var;Executed2Var;EstimatedTimeToCompletion2Var;Total2Var;CompletionPercentage2Var;Deviation2Var;BaselineDeviation2Var;Remark2Var" />
              <Row titleValue="EstimateDate1Var" cells="Baseline1Var;Executed1Var;EstimatedTimeToCompletion1Var;Total1Var;CompletionPercentage1Var;Deviation1Var;BaselineDeviation1Var;Remark1Var" />
            </Grid>
          </Group>
          <Row>
            <Column>
              <Group title="Show">
                <Boolean title="Show Original Figures" source="ShowOriginalFiguresVar" />
                <Field source="ShowActivityTypeVar" title="Show Activity Type" />
                <Field title="Unit of Measure" source="UnitOfMeasureVar" />
              </Group>
            </Column>
            <Column>
              <Group title="Planning Budget Status">
                <If condition="SubmittedVar">
                  <Description title="Submitted" template="^1 by ^2" arguments="DateSubmittedVar;SubmittedByVar" />
                </If>
                <Else>
                  <Description title="Submitted" template="No" />
                </Else>
                <If condition="ApprovedVar">
                  <Description title="Approved" template="^1 by ^2" arguments="ApprovalDateVar;ApprovedByVar" />
                </If>
                <Else>
                  <Description title="Approved" template="No" />
                </Else>
                <If condition="ReopenedVar">
                  <Description title="Reopened" template="^1 by ^2" arguments="DateReopenedVar;ReopenedByVar" />
                </If>
                <Else>
                  <Description title="Reopened" template="No" />
                </Else>
              </Group>
            </Column>
            <Column>
              <Group title="Pending">
                <Field source="PendingRegistrationsVar" title="Pending Registrations" />
                <Field source="PendingHoursVar" title="Hours" />
                <Field source="PendingCostPriceVar" title="Cost" />
              </Group>
            </Column>
          </Row>
        </Column>
      </Form>
      <Form name="Custom">
        <Actions all="true" collapseOrder="other approval default">
        <Exclude>
            <Action source="SubmitBudget" />
            <Action source="ApproveBudget" />
          </Exclude>
          <Action source="UpdateActionForWizard" title="New Progress Evaluation" wizard="NewProgressWizard" />
          <Action title="Submit &amp; Approve Budget" source="MDK_SubmitPlanningBudget" appearance="standard" disabled="(ApprovedVar) defaultTo true" icon="Dot" />
          <Order>
            <Group name="default" grouped="never">
              <Action ref="UpdateActionForWizard" />
            </Group>
            <Group name="approval" title="Approval" grouped="never">
              <Action ref="MDK_SubmitPlanningBudget" />
              <Action ref="SubmitBudget" />
              <Action ref="ApproveBudget" />
              <Action ref="ReopenBudget" />
            </Group>
            <Group name="other" title="Other Actions" grouped="always">
              <Action ref="CreateBudget" />
              <Action ref="CalculatePendingRegistrations" />
            </Group>
          </Order>
        </Actions>
        <Column>
          <Group title="ETC Information">
            <If condition="ApprovedVar">
              <Field source="EstimateDate5Var" title="Estimate Date" open="false" />
              <Field source="Remark5Var" title="Remark" open="false" />
            </If>
            <Else>
              <Field source="EstimateDate5Var" title="Estimate Date" open="false" />
              <Field source="Remark5Var" title="Remark" />
            </Else>
            <Field source="EstimateDate4Var" title="Last Estimate" />
            <Field source="UnitOfMeasureVar" title="Show ETC in" />
          </Group>
          <Group title="Progress History">
            <Style>
              <Chart chartOrientation="vertical" showLabels="false" showLegend="true" fontSize="tiny" />
            </Style>
            <Element appearance="maximized">
              <Widget ref="barchart" />
              <DataSource ref="ProgressHours" />
            </Element>
          </Group>
        </Column>
        <Column>
          <Group title="Totals">
            <Grid style="grid_compact">
              <Define>
                <Style name="TotalHoursRed" ref="trafficlightForegroundRed" condition="field() like 'TotalHoursVar' and TotalHoursVar gt BaselineHoursVar" />
                <Style name="TotalHoursGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalHoursVar'" />
                <Style name="CostTimeRed" ref="trafficlightForegroundRed" condition="field() like 'TotalCostTimeVar' and TotalCostTimeVar gt BaselineCostTimeVar" />
                <Style name="CostTimeGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalCostTimeVar'" />
                <Style name="CostAmountRed" ref="trafficlightForegroundRed" condition="field() like 'TotalCostAmountActivitiesVar' and TotalCostAmountActivitiesVar gt BaselineCostAmountVar" />
                <Style name="CostAmountGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalCostAmountActivitiesVar'" />
                <Style name="CostTotalRed" ref="trafficlightForegroundRed" condition="field() like 'TotalCostVar' and TotalCostVar gt BaselineCostTotalVar" />
                <Style name="CostTotalGreen" ref="trafficlightForegroundGreen" condition="field() like 'TotalCostVar'" />
              </Define>
              <Header title="" cells="|Baseline|;      |Actual|;     |ETC|;               |Current Est.|;        |% Completed|;       |Dev. Previous|;   |Baseline Dev.|;       |Suggested ETC|;              |Actuals w/o Budg.|" style="grid_header" />
              <Row title="Hours" cells="BaselineHoursVar;   UsedHoursVar;   EstimatedTimeToCompletionVar;    TotalHoursVar;        CompletionPercentageTimeVar;DeviationHoursVar;   BaselineDeviationHoursVar;  SuggestedEstimatedTimeToCompletionVar;   UsedHoursNotBudgetedVar" style="TotalHoursRed,TotalHoursGreen" />
              <Row title="Cost, Time" cells="BaselineCostTimeVar;UsedCostTimeVar;EstimatedCostToCompletionTimeVar;TotalCostTimeVar;_;_;_;SuggestedEstimatedCostToCompletionTimeVar;_" style="CostTimeRed,CostTimeGreen" />
              <Row title="Cost, Amount" cells="BaselineCostAmountVar;UsedCostAmountVar;EstimatedCostToCompletionAmountVar;TotalCostAmountActivitiesVar;_;_;_;SuggestedEstimatedCostToCompletionAmountVar;UsedAmountCostNotBudgetedVar" style="CostAmountRed,CostAmountGreen" />
              <Row title="Cost, Total" cells="BaselineCostTotalVar;UsedCostTotalVar;EstimatedCostToCompletionVar;TotalCostVar;CompletionPercentageCostVar;DeviationCostTotalVar;BaselineDeviationCostTotalVar;SuggestedEstimatedCostToCompletionVar;_" style="CostTotalRed,CostTotalGreen" />
            </Grid>
          </Group>
          <Group title="History">
            <Grid style="gridStyle">
              <Header cells="|Baseline|;|Actual|;|ETC|;|Current Est.|;|% Completed|;|Dev. Previous|;|Baseline Dev.|;|Remarks|" style="grid_header" />
              <Row titleValue="EstimateDate5Var" cells="Baseline5Var;Executed5Var;-EstimatedTimeToCompletion5Var;Total5Var;CompletionPercentage5Var;Deviation5Var;BaselineDeviation5Var;-Remark5Var" />
              <Row titleValue="EstimateDate4Var" cells="Baseline4Var;Executed4Var;EstimatedTimeToCompletion4Var;Total4Var;CompletionPercentage4Var;Deviation4Var;BaselineDeviation4Var;Remark4Var" />
              <Row titleValue="EstimateDate3Var" cells="Baseline3Var;Executed3Var;EstimatedTimeToCompletion3Var;Total3Var;CompletionPercentage3Var;Deviation3Var;BaselineDeviation3Var;Remark3Var" />
              <Row titleValue="EstimateDate2Var" cells="Baseline2Var;Executed2Var;EstimatedTimeToCompletion2Var;Total2Var;CompletionPercentage2Var;Deviation2Var;BaselineDeviation2Var;Remark2Var" />
              <Row titleValue="EstimateDate1Var" cells="Baseline1Var;Executed1Var;EstimatedTimeToCompletion1Var;Total1Var;CompletionPercentage1Var;Deviation1Var;BaselineDeviation1Var;Remark1Var" />
            </Grid>
          </Group>
          <Row>
            <Column>
              <Group title="Show">
                <Boolean title="Show Original Figures" source="ShowOriginalFiguresVar" />
                <Field source="ShowActivityTypeVar" title="Show Activity Type" />
                <Field title="Unit of Measure" source="UnitOfMeasureVar" />
              </Group>
            </Column>
            <Column>
              <Group title="Planning Budget Status">
                <If condition="SubmittedVar">
                  <Description title="Submitted" template="^1 by ^2" arguments="DateSubmittedVar;SubmittedByVar" />
                </If>
                <Else>
                  <Description title="Submitted" template="No" />
                </Else>
                <If condition="ApprovedVar">
                  <Description title="Approved" template="^1 by ^2" arguments="ApprovalDateVar;ApprovedByVar" />
                </If>
                <Else>
                  <Description title="Approved" template="No" />
                </Else>
                <If condition="ReopenedVar">
                  <Description title="Reopened" template="^1 by ^2" arguments="DateReopenedVar;ReopenedByVar" />
                </If>
                <Else>
                  <Description title="Reopened" template="No" />
                </Else>
              </Group>
            </Column>
            <Column>
              <Group title="Pending">
                <Field source="PendingRegistrationsVar" title="Pending Registrations" />
                <Field source="PendingHoursVar" title="Hours" />
                <Field source="PendingCostPriceVar" title="Cost" />
              </Group>
            </Column>
          </Row>
        </Column>
      </Form>
    </UpperPane>
    <LowerPane>
      <Define>
        <Style name="TotalOnLineVarOverBaseline" ref="trafficlightRed" condition="TotalOnLineVar gt BaselineOnLineVar" />
        <Style name="TotalOnLineVarWithinBaseline" ref="trafficlightGreen" condition="TotalOnLineVar le BaselineOnLineVar" />
        <Function name="sumLine" value="LineType=JobBudgetLineTypeType'\Sum/Text\ and NumberOfSubordinateLines gt 0" />
      </Define>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Style ref="treeStructureSummaryLine" condition="NumberOfSubordinateLines gt 0" />
          <Field source="Text" />
          <Field source="ActivityNumber" title="Act. No." open="not sumLine()" />
          <Field source="TaskName" open="not sumLine()" />
          <Field source="ProgressStatusVar" title="Progress Status{must equal the island Show Progress Status}" />
          <Field source="EmployeeCategoryNumber" title="Empl. Cat. No." open="not sumLine()" />
          <Field source="PlannedOnLineVar" title="Planned" open="not sumLine()" />
          <Field source="UsedOnLineVar" title="Used{actual}" open="not sumLine()" />
          <Field source="EstimatedTimeToCompletionOnLineVar" title="Estimate to Completion{1}" open="not sumLine()" />
          <Field source="EstimatedTimeToCompletionOnLineManDaysVar" title="Est. Time to Compl., Days" open="not sumLine()" />
          <Field source="TotalOnLineVar" title="Total{In total}" style="TotalOnLineVarOverBaseline,TotalOnLineVarWithinBaseline" />
          <Field source="RoundingBetweenTotalAndTotalBudgettedOnLineVar" title="Rounding diff." />
          <Field source="BaselineOnLineVar" title="Baseline{baseline}" />
          <Field source="BaselineDeviationOnLineVar" title="Baseln. Dev.{Deviation of estimated total hours/cost compared to Baseline Budget (baseline)}" />
          <Field source="DeviationOnLineVar" title="Deviation{according to plan}" />
          <Field source="AccumulatedDeviationOnLineVar" title="Acc. Deviation{according to plan}" />
          <Field source="ExpectedEstimatedTimeToCompletionOnLineVar" title="Expected estimate to completion{time or cost}" />
          <Field source="ExpectedEstimatedTimeToCompletionOnLineManDaysVar" title="Expected estimate to compl., Days{time}" />
          <Field source="CompletionPercentageOnLineVar" title="CP %{Completion}" />
          <Field source="LineRemarkVar" title="Remarks{sg}" />
          <Field source="PreviouslyPlannedOnLineVar" title="Prev. Planned" />
