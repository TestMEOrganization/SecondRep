<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="AssetAdjustment">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1" arguments="AssetAdjustmentNumber" />
        </Compact>
        <Columns>
          <Field source="AssetAdjustmentNumber" />
          <Field source="CompanyNumber" />
          <Field source="CreatedBy" />
          <Field source="CreatedDate" title="Created On" />
          <Field source="ApprovedBy" />
          <Field source="ApprovalDate" title="Approved On" />
        </Columns>
      </Filter>
      <Filter name="Custom">
        <Actions>
          <If condition="hasWorkspace('FixedAssets')">
            <Action source="with.Create" wizard="MDK_CreateAssetAdjustmentWizard" />
          </If>
        </Actions>
        <ControlBar>
          <Selection default="MyAdjustments">
            <Option title="My Adjustments" name="MyAdjustments" restriction="CreatedBy=maconomy:username()" />
            <Option title="All Adjustments" name="AllAdjustments" />
          </Selection>
        </ControlBar>
        <Compact>
          <Description template="^1" arguments="AssetAdjustmentNumber" />
        </Compact>
        <Columns>
          <Field source="AssetAdjustmentNumber" />
          <Field source="CompanyNumber" />
          <Field source="CreatedBy" />
          <Field source="CreatedDate" title="Created On" />
          <Field source="ApprovedBy" />
          <Field source="ApprovalDate" title="Approved On" />
        </Columns>
      </Filter>
      <Filter name="Home">
        <Actions>
          <If condition="hasWorkspace('FixedAssets')">
            <Action source="with.Create" wizard="CreateAssetAdjustmentWizard" />
          </If>
        </Actions>
        <ControlBar>
          <Selection default="MyAdjustments">
            <Option title="My Adjustments" name="MyAdjustments" restriction="CreatedBy=maconomy:username()" />
            <Option title="All Adjustments" name="AllAdjustments" />
          </Selection>
        </ControlBar>
        <Compact>
          <Description template="^1" arguments="AssetAdjustmentNumber" />
        </Compact>
        <Columns>
          <Field source="AssetAdjustmentNumber" />
          <Field source="CompanyNumber" />
          <Field source="CreatedBy" />
          <Field source="CreatedDate" title="Created On" />
          <Field source="ApprovedBy" />
          <Field source="ApprovalDate" title="Approved On" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Wizard name="MDK_CreateAssetadjustmentWizard" title="Create Asset Adjustment">
        <Page form="MDK_CreateAssetAdjustmentWizardPage1" title="Asset Adjustment" description="Please enter the company and transaction type. Company cannot be changed later." />
      </Wizard>
      <Wizard name="CreateAssetadjustmentWizard" title="Create Asset Adjustment">
        <Page form="CreateAssetAdjustmentWizardPage1" title="Asset Adjustment" description="Please enter the company and transaction type. Company cannot be changed later." />
      </Wizard>
      <Form name="Full">
        <Actions all="true" />
        <Row>
          <Column>
            <Group title="Journal{Draft}">
              <Field source="AssetAdjustmentNumber" />
            </Group>
            <Group title="User">
              <If condition="CreatedBy != ''">
                <Description template="^1 by ^2" arguments="CreatedDate;CreatedBy" title="Created" />
              </If>
              <Else>
                <Description template="" title="Created" />
              </Else>
              <If condition="ApprovedBy != ''">
                <Description template="^1 by ^2" arguments="ApprovalDate;ApprovedBy" title="Approved" />
              </If>
              <Else>
                <Description template="" title="Approved" />
              </Else>
            </Group>
          </Column>
          <Column>
            <Group title="Transaction Numbering">
              <Field source="DefaultTransactionType" title="Transaction Type" />
              <Field source="TransactionNumberSeries" title="Number Series{sg}" />
            </Group>
            <Group title="Company">
              <Reference foreignKey="CompanyNumber_CompanyInformation" />
              <Field source="BaseCurrencyVar" title="Base Currency" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="MDK_CreateAssetAdjustmentWizardPage1">
        <Actions all="true" />
        <Column>
          <Group title="">
            <Reference foreignKey="CompanyNumber_CompanyInformation" title="Company" keySize="small" />
          </Group>
        </Column>
      </Form>
      <Form name="CreateAssetAdjustmentWizardPage1">
        <Actions all="true" />
        <Column>
          <Group title="">
            <Reference foreignKey="CompanyNumber_CompanyInformation" title="Company" keySize="small" />
            <Field source="DefaultTransactionType" title="Transaction Type" size="large" />
          </Group>
        </Column>
      </Form>
      <Form name="Custom">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('FixedAssets')">
              <Create />
            </If>
          </Exclude>
        </Actions>
        <Row>
          <Column>
            <Group title="Journal{Draft}">
              <Field source="AssetAdjustmentNumber" />
            </Group>
            <Group title="Company">
              <Reference foreignKey="CompanyNumber_CompanyInformation" />
              <Field source="BaseCurrencyVar" title="Base Currency" />
            </Group>
          </Column>
          <Column>
            <Group title="Status">
              <If condition="CreatedBy != ''">
                <Description template="^1 by ^2" arguments="CreatedDate;CreatedBy" title="Created" />
              </If>
              <Else>
                <Description template="" title="Created" />
              </Else>
              <If condition="ApprovedBy != ''">
                <Description template="^1 by ^2" arguments="ApprovalDate;ApprovedBy" title="Approved" />
              </If>
              <Else>
                <Description template="" title="Approved" />
              </Else>
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="Standard">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('FixedAssets')">
              <Create />
            </If>
          </Exclude>
        </Actions>
        <Row>
          <Column>
            <Group title="Journal{Draft}">
              <Field source="AssetAdjustmentNumber" />
            </Group>
            <Group title="Company">
              <Reference foreignKey="CompanyNumber_CompanyInformation" />
              <Field source="BaseCurrencyVar" title="Base Currency" />
            </Group>
          </Column>
          <Column>
            <Group title="Transaction Numbering">
              <Field source="DefaultTransactionType" title="Transaction Type" />
              <Field source="TransactionNumberSeries" title="Number Series{sg}" />
            </Group>
            <Group title="Status">
              <If condition="CreatedBy != ''">
                <Description template="^1 by ^2" arguments="CreatedDate;CreatedBy" title="Created" />
              </If>
              <Else>
                <Description template="" title="Created" />
              </Else>
              <If condition="ApprovedBy != ''">
                <Description template="^1 by ^2" arguments="ApprovalDate;ApprovedBy" title="Approved" />
              </If>
              <Else>
                <Description template="" title="Approved" />
              </Else>
            </Group>
          </Column>
        </Row>
      </Form>
    </UpperPane>
    <LowerPane>
      <Define>
        <Include fragment="GD_Dimensions" />
      </Define>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="TheDate" />
          <Field source="TransactionNumber" />
          <Field source="TransactionType" title="Trans. Type" />
          <Field source="AssetNumber" />
          <Field source="AssetTransactionType" />
          <Field source="TheAmount" title="Amount, Base" />
          <Field source="AmountCurrency" />
          <Field source="Currency" />
          <Field source="TransactionSubGroup" />
          <Field source="AssetGroup" />
          <Field source="AssetSubGroup" />
          <Field source="SalesPercentage" />
          <Field source="Remark" />
          <Field source="CompanyNumber" />
          <Columns ref="DimensionColumns" />
          <Field source="NewAssetGroup" />
          <Field source="NewAssetNumber" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

