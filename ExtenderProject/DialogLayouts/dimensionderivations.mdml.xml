<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="DimensionDerivations">
    <UpperPane>
      <Define>
        <Include fragment="GD_Dimensions" />
      </Define>
      <Form name="Custom_RoleRestricted_Full">
        <Actions all="true" >
          <Exclude>
            <If condition="not hasRole('Finance Admin')">
              <Create />
              <Update />
              <Delete />
            </If>
          </Exclude>
        </Actions>
        <Row>
          <Column>
            <Group title="Priority">
              <Field source="UserPriority" title="User" />
              <Field source="AccountPriority" title="Account" />
              <Field source="CompanyPriority" title="Company" />
              <Field source="CustomerPriority" title="Customer{Debitor}" />
              <Field source="VendorPriority" title="Vendor{Creditor}" />
              <Field source="JobPriority" title="Job" />
              <Field source="ActivityPriority" title="Activity" />
              <Field source="EmployeePriority" title="Employee Information" />
              <Field source="ItemPriority" title="Item" />
            </Group>
          </Column>
          <Column>
            <Group ref="DimiensionPriorityGroup" />
          </Column>
        </Row>
        <Row>
          <Group ref="UserUpdateGroup" />
        </Row>
      </Form>
      <Form name="Full">
        <Actions all="true" />
        <Row>
          <Column>
            <Group title="Priority">
              <Field source="UserPriority" title="User" />
              <Field source="AccountPriority" title="Account" />
              <Field source="CompanyPriority" title="Company" />
              <Field source="CustomerPriority" title="Customer{Debitor}" />
              <Field source="VendorPriority" title="Vendor{Creditor}" />
              <Field source="JobPriority" title="Job" />
              <Field source="ActivityPriority" title="Activity" />
              <Field source="EmployeePriority" title="Employee Information" />
              <Field source="ItemPriority" title="Item" />
            </Group>
          </Column>
          <Column>
            <Group ref="DimiensionPriorityGroup" />
          </Column>
        </Row>
        <Row>
          <Group ref="UserUpdateGroup" />
        </Row>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom_RoleRestricted_Full">
        <Actions all="true" >
          <Exclude>
            <If condition="not hasRole('Finance Admin')">
              <Create />
              <Update />
              <Delete />
            </If>
          </Exclude>
        </Actions>
        <Columns>
          <Field source="DerivationType" />
          <Field source="DerivationFrom" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="DerivationType" />
          <Field source="DerivationFrom" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

