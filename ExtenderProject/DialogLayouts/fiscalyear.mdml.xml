<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="FiscalYear">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1, ^2" arguments="FiscalYearTemplateNumber;FiscalYearStart" />
        </Compact>
        <Columns>
          <Field source="FiscalYearTemplateNumber" />
          <Field source="FiscalYearStart" />
          <Field source="FiscalYearEnd" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Form name="Full">
        <Actions all="true" />
        <Column>
          <Group title="Fiscal Year">
            <Field source="FiscalYearTemplateNumber" title="Name" />
            <Field source="FiscalYearStart" title="Start" />
            <Field source="FiscalYearEnd" title="End" />
            <Field source="Blocked" title="Blocked{Is}" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
      <Form name="Custom_RoleRestricted_CompanySpecific" open="hasRole('Finance Admin')" >
        <Actions all="true" />
        <Column>
          <If condition="SharedByVar &gt; 1">
            <Group style="attentionText">
              <Description template="^1 companies are using this fiscal year (for details see Used By)" arguments="SharedByVar" appearance="maximized" size="vast" />
            </Group>
          </If>
          <Group title="Fiscal Year">
            <Field source="FiscalYearTemplateNumber" title="Name" />
            <Field source="FiscalYearStart" title="Start" />
            <Field source="FiscalYearEnd" title="End" />
            <Field source="Blocked" title="Blocked{Is}" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
      <Form name="CompanySpecific">
        <Actions all="true" />
        <Column>
          <If condition="SharedByVar &gt; 1">
            <Group style="attentionText">
              <Description template="^1 companies are using this fiscal year (for details see Used By)" arguments="SharedByVar" appearance="maximized" size="vast" />
            </Group>
          </If>
          <Group title="Fiscal Year">
            <Field source="FiscalYearTemplateNumber" title="Name" />
            <Field source="FiscalYearStart" title="Start" />
            <Field source="FiscalYearEnd" title="End" />
            <Field source="Blocked" title="Blocked{Is}" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')" >
        <Actions all="true" />
        <Columns>
          <Field source="Period" />
          <Field source="PeriodStart" title=" Period Start" />
          <Field source="PeriodEnd" />
          <Field source="CalendarMonth" />
          <Field source="CalendarYear" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="Period" />
          <Field source="PeriodStart" title=" Period Start" />
          <Field source="PeriodEnd" />
          <Field source="CalendarMonth" />
          <Field source="CalendarYear" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

