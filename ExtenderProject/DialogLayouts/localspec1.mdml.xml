<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="LocalSpec1">
    <FilterPane>
      <Filter name="Custom_RoleRestricted_Standard">
        <Actions>
          <Exclude>
            <If condition="not hasRole('Finance Admin')">
              <Create />
              <Update />
              <Delete />
            </If>
          </Exclude>
          <If condition="hasWorkspace('LocalDimensions') and hasRole('Finance Admin')">
            <Action source="with.Create" wizard="CreateLocalSpecification1" title="New Local Specification 1" />
          </If>
        </Actions>
        <Compact>
          <Description template="^1 (^2)" arguments="Description;LocalSpec1List" />
        </Compact>
        <Columns>
          <Field source="LocalSpec1List" />
          <Field source="Description" />
          <Field source="LocalSpec1StandardName" />
          <Field source="AccessLevelName" />
          <Columns ref="UserUpdateColumns" />
        </Columns>
      </Filter>
      <Filter name="Standard">
        <Actions>
          <If condition="hasWorkspace('LocalDimensions')">
            <Action source="with.Create" wizard="CreateLocalSpecification1" title="New Local Specification 1" />
          </If>
        </Actions>
        <Compact>
          <Description template="^1 (^2)" arguments="Description;LocalSpec1List" />
        </Compact>
        <Columns>
          <Field source="LocalSpec1List" />
          <Field source="Description" />
          <Field source="LocalSpec1StandardName" />
          <Field source="AccessLevelName" />
          <Columns ref="UserUpdateColumns" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Wizard name="CreateLocalSpecification1" title="Create Local Specification 1">
        <Page form="CreateLocalSpecification1" title="Local Specification 1" description="Please enter the list name and standard name" />
      </Wizard>
      <Form name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('LocalDimensions')">
              <Create />
            </If>
          </Exclude>
        </Actions>
        <Column>
          <Group title="Local Specification 1 List">
            <Field source="LocalSpec1List" size="large" />
            <Field source="Description" />
            <Field source="LocalSpec1StandardName" title="Standard Name" size="large" />
          </Group>
          <Group title="Access Level">
            <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
      <Form name="Full">
        <Actions all="true">
          <Exclude>
            <If condition="hasWorkspace('LocalDimensions')">
              <Create />
            </If>
          </Exclude>
        </Actions>
        <Column>
          <Group title="Local Specification 1 List">
            <Field source="LocalSpec1List" size="large" />
            <Field source="Description" />
            <Field source="LocalSpec1StandardName" title="Standard Name" size="large" />
          </Group>
          <Group title="Access Level">
            <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
      <Form name="CreateLocalSpecification1">
        <Actions all="true" />
        <Row>
          <Group title="" style="fullWidth">
            <Field source="LocalSpec1List" />
            <Field source="Description" />
            <Field source="LocalSpec1StandardName" title="Standard Name" />
          </Group>
        </Row>
      </Form>
      <Form name="Custom_RoleRestricted_CompanySpecific" open="hasRole('Finance Admin')" >
        <Actions all="true">
          <Exclude>
            <Create />
            <Delete />
          </Exclude>
        </Actions>
        <Column style="fullWidth">
          <If condition="SharedByVar &gt; 1">
            <Group style="attentionText">
              <Description template="^1 companies are using this local specification (for details see Used By)" arguments="SharedByVar" appearance="maximized" />
            </Group>
          </If>
          <Group title="Local Specification 1 List">
            <Field source="LocalSpec1List" />
            <Field source="Description" />
            <Field source="LocalSpec1StandardName" title="Standard Name" />
          </Group>
          <Group title="Access Level">
            <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
      <Form name="CompanySpecific">
        <Actions all="true">
          <Exclude>
            <Create />
            <Delete />
          </Exclude>
        </Actions>
        <Column style="fullWidth">
          <If condition="SharedByVar &gt; 1">
            <Group style="attentionText">
              <Description template="^1 companies are using this local specification (for details see Used By)" arguments="SharedByVar" appearance="maximized" />
            </Group>
          </If>
          <Group title="Local Specification 1 List">
            <Field source="LocalSpec1List" />
            <Field source="Description" />
            <Field source="LocalSpec1StandardName" title="Standard Name" />
          </Group>
          <Group title="Access Level">
            <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
          </Group>
          <Group ref="UserUpdateGroup" />
        </Column>
      </Form>
    </UpperPane>
    <LowerPane>
      <Define>
        <Include fragment="GD_Dimensions" />
      </Define>
      <Table name="Custom_RoleRestricted_Full" open="hasRole('Finance Admin')" >
        <Actions all="true" />
        <Columns>
          <Field source="LocalSpec1Name" />
          <Field source="Description" />
          <Field source="Blocked" />
          <Field source="Statistic1" />
          <Field source="Statistic2" />
          <Field source="Statistic3" />
          <Field source="Statistic4" />
          <Field source="DimensionCombNumber" title="Dim. Comb. No." />
          <Field source="AccountNumber" title="Derived Account No." />
          <Field source="OverwriteAccount" />
          <Columns ref="DimensionNameOverwriteColumns" />
          <Field source="Remark1" />
          <Field source="Remark2" />
          <Field source="Remark3" />
          <Field source="Remark4" />
          <Field source="Remark5" />
        </Columns>
      </Table>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="LocalSpec1Name" />
          <Field source="Description" />
          <Field source="Blocked" />
          <Field source="Statistic1" />
          <Field source="Statistic2" />
          <Field source="Statistic3" />
          <Field source="Statistic4" />
          <Field source="DimensionCombNumber" title="Dim. Comb. No." />
          <Field source="AccountNumber" title="Derived Account No." />
          <Field source="OverwriteAccount" />
          <Columns ref="DimensionNameOverwriteColumns" />
          <Field source="Remark1" />
          <Field source="Remark2" />
          <Field source="Remark3" />
          <Field source="Remark4" />
          <Field source="Remark5" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

