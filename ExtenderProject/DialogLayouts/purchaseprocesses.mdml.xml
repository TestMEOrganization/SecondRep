<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="PurchaseProcesses">
    <FilterPane>
      <Filter name="Custom_NoCompact">
        <Actions>
          <Action source="primary.Create" title="New Purchase Process" wizard="CreatePurchaseProcessWizard" disabled="false" />
        </Actions>
        <ControlBar>
          <Selection default="MyOpenPurchaseProcesses">
            <Option title="My Open Purchase Processes" name="MyOpenPurchaseProcesses" restriction="Status != PurchaseProcessStatusType'Closed                         and UserEmployeeNumber() != ''                                         and (PurchaserEmployeeNumber=UserEmployeeNumber() or RequisitionerEmployeeNumber=UserEmployeeNumber())" />
            <Option title="My Purchase Processes" name="MyPurchaseProcesses" restriction="UserEmployeeNumber() != ''                                        and (PurchaserEmployeeNumber=UserEmployeeNumber() or RequisitionerEmployeeNumber=UserEmployeeNumber())" />
            <Option title="Open Purchase Processes" name="OpenPurchaseProcesses" restriction="Status != PurchaseProcessStatusType'Closed" />
            <Option title="All Purchase Processes" name="AllPurchaseProcesses" />
          </Selection>
        </ControlBar>
        <Columns>
          <Field source="PurchaseProcessNumber" />
          <Field source="Description" />
          <Field source="JobNumber" />
          <Field source="PurchaserEmployeeNumber" />
          <Field source="RequisitionerEmployeeNumber" />
          <Field source="CompanyNumber" />
          <Field source="AccessLevelName" />
        </Columns>
      </Filter>
      <Filter name="Standard">
        <Actions>
          <Action source="primary.Create" title="New Purchase Process" wizard="CreatePurchaseProcessWizard" disabled="false" />
        </Actions>
        <ControlBar>
          <Selection default="MyOpenPurchaseProcesses">
            <Option title="My Open Purchase Processes" name="MyOpenPurchaseProcesses" restriction="Status != PurchaseProcessStatusType'Closed                         and UserEmployeeNumber() != ''                                         and (PurchaserEmployeeNumber=UserEmployeeNumber() or RequisitionerEmployeeNumber=UserEmployeeNumber())" />
            <Option title="My Purchase Processes" name="MyPurchaseProcesses" restriction="UserEmployeeNumber() != ''                                        and (PurchaserEmployeeNumber=UserEmployeeNumber() or RequisitionerEmployeeNumber=UserEmployeeNumber())" />
            <Option title="Open Purchase Processes" name="OpenPurchaseProcesses" restriction="Status != PurchaseProcessStatusType'Closed" />
            <Option title="All Purchase Processes" name="AllPurchaseProcesses" />
          </Selection>
        </ControlBar>
        <Compact>
          <Description template="^1 (^2)" arguments="PurchaseProcessNumber;Description" />
        </Compact>
        <Columns>
          <Field source="PurchaseProcessNumber" />
          <Field source="Description" />
          <Field source="JobNumber" />
          <Field source="PurchaserEmployeeNumber" />
          <Field source="RequisitionerEmployeeNumber" />
          <Field source="CompanyNumber" />
          <Field source="AccessLevelName" />
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Wizard name="CreatePurchaseProcessWizard" title="Create Purchase Process">
        <Page form="CreatePurchaseProcessPage1" title="Purchase Process Information" />
      </Wizard>
      <Form name="Full">
        <Actions>
          <Update />
        </Actions>
        <Row>
          <Column>
            <Group title="Purchase Process">
              <Field source="PurchaseProcessNumber" />
              <Field source="Description" />
              <Field source="PurchaseTransactionType" />
              <Reference foreignKey="AccessLevelName_AccessLevelHeader" keyShadowTitle="Name" descriptionShadowTitle="Description" />
            </Group>
          </Column>
          <Column>
            <Group title="Purchase Information">
              <Reference foreignKey="PurchaseProcessJobNumber_JobHeader" />
              <Reference foreignKey="PurchaseProcessHeaderCompanyNumber_CompanyInformation" />
              <Reference foreignKey="PurchaseProcessHeaderRequisitionerEmployeeNumber_Employee" titleSource="RequisitionerEmployeeNumber" />
              <Reference foreignKey="PurchaseProcessHeaderPurchaserEmployeeNumber_Employee" titleSource="PurchaserEmployeeNumber" />
            </Group>
          </Column>
        </Row>
      </Form>
      <Form name="CreatePurchaseProcessPage1">
        <Actions>
          <Create />
        </Actions>
        <Row>
          <Group>
            <Field source="PurchaseProcessTypeVar" mandatory="true" />
            <Field source="Description" />
            <Field source="PurchaseTransactionType" />
            <Reference foreignKey="Supplier_Vendor" />
            <Reference foreignKey="PurchaseProcessJobNumber_JobHeader" />
            <Reference foreignKey="PurchaseProcessHeaderCompanyNumber_CompanyInformation" />
            <Reference foreignKey="PurchaseProcessHeaderRequisitionerEmployeeNumber_Employee" titleSource="RequisitionerEmployeeNumber" />
            <Reference foreignKey="PurchaseProcessHeaderPurchaserEmployeeNumber_Employee" titleSource="PurchaserEmployeeNumber" />
          </Group>
        </Row>
      </Form>
    </UpperPane>
  </Layout>
</MDML>

