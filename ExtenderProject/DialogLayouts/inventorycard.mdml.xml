            <Boolean source="ShowLocationsVar" title="Show Stock Locations" />
            <Range firstSource="FromLocationNumberVar" lastSource="ToLocationNumberVar" title="Stock Location No." />
            <Field source="StorageLocationNumberVar" title="Storage Locations" />
            <Field source="PickingLocationsVar" title="Picking Locations" />
