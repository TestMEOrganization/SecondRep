<MDML xmlns="http://www.deltek.com/ns/mdml" version="0.59">
  <Layout source="ItemInformation">
    <FilterPane>
      <Filter name="Standard">
        <Compact>
          <Description template="^1 (^2)" arguments="ItemText1;ItemNumber" />
        </Compact>
        <Columns>
          <Field source="ItemNumber" />
          <Field source="ItemText1" />
          <Field source="ItemText2" />
          <Field source="ItemText3" />
          <Field source="InternalText" />
          <Field source="SupplementaryText1" />
          <Field source="SupplementaryText2" />
          <Field source="SupplementaryText3" />
          <Field source="SupplementaryText4" />
          <Field source="SupplementaryText5" />
        </Columns>
      </Filter>
      <Filter name="MinimalWithLink">
        <Columns>
          <Field source="ItemNumber" />
          <Field source="ItemText1" />
          <Field source="ItemType" />
          <Field source="ItemGroup" />
          <Field source="ItemVATCode" />
          <Field source="Blocked" />
          <Link workspace="OrderSetup" template="More details..." title=" " icon="WorkspaceLink">
            <Waypoint pane="ItemCard_Filter">
              <Restriction template="Selected Item" expression="ItemNumber=target.ItemNumber" />
              <Focus>
                <Match field="ItemNumber" value="ItemNumber" />
              </Focus>
            </Waypoint>
            <Target pane="ItemCard_Card" />
          </Link>
        </Columns>
      </Filter>
    </FilterPane>
    <UpperPane>
      <Form name="Full">
        <Actions all="true" />
        <Column>
          <Group title="Item">
            <Field source="ItemNumber" title="Item No." />
            <Field source="ItemText1" title="Description{Item}" />
            <Field source="InternalText" />
            <Boolean source="BOM" title="Bill of Materials" />
          </Group>
          <Group title="Information{1}">
            <Column>
              <Field source="Unit" title="Unit, Sales" />
              <Field source="SmallestSalesUnit" title="Minimum Sales Unit" />
              <Field source="PriceUnit" title="Pricing Unit, Sales" />
              <Field source="PurchaseUnit" title="Unit, Purchase" />
              <Field source="SmallestPurchaseUnit" title="Minimum Purchase Unit" />
              <Field source="PurchasePriceUnit" title="Pricing Unit, Purchase" />
              <Field source="SalesUnitsPerPurchaseUnit" title="Sales/Purchase Unit" />
              <Field source="Weight" title="Gross Weight{1}" />
              <Field source="Volume" title="Volume" />
            </Column>
            <Column>
              <Field source="ItemType" title="Item Type" />
              <Field source="ItemGroup" title="Item Group" />
              <Field source="AssortedGroupName" title="Pricing Combination" />
              <Boolean source="Blocked" title="Discontinued" />
              <Boolean source="InventoryControl" title="Inventory Control" />
              <Field source="InventoryNumber" title="Primary Warehouse" />
              <If condition="maconomy:booleanSysPar('UseMultipleVATLevels')">
                <Field source="VATCode" />
                <Field source="VATCode2" />
                <If condition="maconomy:booleanSysPar('ShowThreeVATLevels')">
                  <Field source="VATCode3" />
                </If>
              </If>
              <Else>
                <Field source="VATCode" title="Tax Code" />
              </Else>
            </Column>
          </Group>
        </Column>
      </Form>
      <Form name="Overview_Vertical">
        <Column>
          <Group title="Item">
            <Field source="ItemNumber" title="Item No." />
            <Field source="ItemText1" title="Description{Item}" />
            <Field source="InternalText" />
            <Field source="BOM" title="Bill of Materials" />
          </Group>
          <Group title="General Information{1}">
            <Column>
              <Field source="Unit" title="Unit, Sales" />
              <Field source="SmallestSalesUnit" title="Minimum Sales Unit" />
              <Field source="PriceUnit" title="Pricing Unit, Sales" />
              <Field source="PurchaseUnit" title="Unit, Purchase" />
              <Field source="SmallestPurchaseUnit" title="Minimum Purchase Unit" />
              <Field source="PurchasePriceUnit" title="Pricing Unit, Purchase" />
              <Field source="SalesUnitsPerPurchaseUnit" title="Sales/Purchase Unit" />
              <Field source="Weight" title="Gross Weight{1}" />
              <Field source="Volume" title="Volume" />
              <Field source="ItemType" title="Item Type" />
              <Field source="ItemGroup" title="Item Group" />
              <Field source="AssortedGroupName" title="Pricing Combination" />
              <Field source="Blocked" title="Discontinued" />
              <Field source="InventoryControl" title="Inventory Control" />
              <Field source="InventoryNumber" title="Primary Warehouse" />
              <If condition="maconomy:booleanSysPar('UseMultipleVATLevels')">
                <Field source="VATCode" />
                <Field source="VATCode2" />
                <If condition="maconomy:booleanSysPar('ShowThreeVATLevels')">
                  <Field source="VATCode3" />
                </If>
              </If>
              <Else>
                <Field source="VATCode" title="Tax Code" />
              </Else>
            </Column>
          </Group>
          <Group>
            <Link workspace="OrderSetup" template="More details..." title="" tooltip="Sales Order Setup workspace" appearance="maximized" icon="WorkspaceLink">
              <Waypoint pane="ItemCard_Filter">
                <Restriction template="Selected Item" expression="ItemNumber = target.ItemNumber" />
                <Focus>
                  <Match field="ItemNumber" value="ItemNumber" />
                </Focus>
              </Waypoint>
              <Target pane="ItemCard_Card" />
            </Link>
          </Group>
        </Column>
      </Form>
    </UpperPane>
    <LowerPane>
      <Table name="Full">
        <Actions all="true" />
        <Columns>
          <Field source="InventoryNumber" />
          <Field source="DeliveryTime" />
          <Field source="InventoryVolume" />
          <Field source="QuotationVolume" />
          <Field source="OrderVolume" />
          <Field source="AvailableInventory" />
          <Field source="BackOrderVolume" />
          <Field source="PurchaseOrderVolume" />
          <Field source="ProductionVolume" />
          <Field source="StockLocation" />
        </Columns>
      </Table>
    </LowerPane>
  </Layout>
</MDML>

