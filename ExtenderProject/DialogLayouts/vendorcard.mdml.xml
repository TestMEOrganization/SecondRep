                  <Restriction template="Selected Vendor" expression="VendorNumber=target.VendorNumber" />
                  <Focus>
                    <Match field="VendorNumber" value="VendorNumber" />
                  </Focus>
                </Target>
              </Link>
            </Group>
          </Row>
        </If>
      </Form>
