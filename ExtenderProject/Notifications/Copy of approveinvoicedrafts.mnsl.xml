<?xml version="1.0" encoding="UTF-8"?>
<!-- MJA, 09.08.10: New notification for approval of job invoice drafts (38255). -->
<!-- KRN, 30.11.10: Changed notification description (39177). -->
<!-- KRN, 15/12/10: Description template updated (39230). -->
<!-- JSV, 02/09/11: Rename DraftInvoiceEditing to DraftInvoices (39256).-->
<MNSL xmlns="http://www.deltek.com/ns/mnsl" version="0.2">
  <Notifications name="ApproveInvoiceDrafts">
    <Query entity="NotificationUniverses::JobCost::ApproveInvoiceDrafts">
      <Restriction condition="InvoiceEditingHeader.ProjectManagerNumber = userEmployeeNumber()" />
    </Query>
    <Link workspace="C_DraftInvoices">
      <Description template="^1, ^2, ^4 ^3 (^5)" arguments="InvoiceEditingHeader.JobNumber JobHeader.Name1 InvoiceEditingHeader.BillingPriceForInvoicingInvoiceCurrency InvoiceEditingHeader.InvoiceCurrency InvoiceEditingHeader.DebitCredit" />
      <Waypoint pane="InvoiceEditing_Filter">
        <Restriction title="Invoice Drafts for Approval">
          <Match queryField="InvoiceEditingHeader.JobNumber" field="JobNumber" />
          <Match queryField="InvoiceEditingHeader.InvoiceEditingNumber" field="InvoiceEditingNumber" />
          <Match queryField="InvoiceEditingHeader.PaymentCustomer" field="PaymentCustomer" />
        </Restriction>
      </Waypoint>
      <Target pane="InvoiceEditing_Card">
        <Restriction title="None">
          <Match queryField="InvoiceEditingHeader.InstanceKey" field="InstanceKey" />
        </Restriction>
      </Target>
    </Link>
  </Notifications>
</MNSL>

